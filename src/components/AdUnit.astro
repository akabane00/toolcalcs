---
interface Props {
  slot: string;
  format?: 'auto' | 'rectangle' | 'horizontal' | 'vertical';
  class?: string;
}

const { slot, format = 'auto', class: className = '' } = Astro.props;
const isAdSenseActive = false; // Set to true after AdSense approval
---

{isAdSenseActive && (
  <div class:list={['ad-unit', className]}>
    <ins class="adsbygoogle"
      style="display:block"
      data-ad-client="ca-pub-XXXXXXXXXXXXXXXX"
      data-ad-slot={slot}
      data-ad-format={format}
      data-full-width-responsive="true">
    </ins>
  </div>
)}

<style>
  .ad-unit {
    min-height: 100px;
    margin: 24px 0;
    text-align: center;
  }
</style>
