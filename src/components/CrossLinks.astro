---
interface CrossLink {
  href: string;
  label: string;
  icon: string;
}
interface Props {
  links: CrossLink[];
}
const { links } = Astro.props;
---

{links.length > 0 && (
  <section class="cross-links">
    <h3>See Also</h3>
    <div class="cross-links-list">
      {links.map(link => (
        <a href={link.href}>
          <span class="cl-icon">{link.icon}</span>
          {link.label}
        </a>
      ))}
    </div>
  </section>
)}

<style>
  .cross-links {
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid var(--color-border);
  }
  .cross-links h3 {
    font-size: 1rem;
    margin-bottom: 10px;
    color: var(--color-text);
  }
  .cross-links-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  .cross-links-list a {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    padding: 6px 12px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    font-size: 0.82rem;
    color: var(--color-text);
    background: var(--color-surface);
    transition: border-color 0.15s, color 0.15s;
  }
  .cross-links-list a:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    text-decoration: none;
  }
  .cl-icon { font-size: 0.95rem; }
</style>
