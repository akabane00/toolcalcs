<style>
  .site-footer {
    margin-top: auto;
    background: var(--color-surface);
    border-top: 1px solid var(--color-border);
    padding: 32px 20px;
    text-align: center;
  }
  .footer-inner {
    max-width: var(--max-width);
    margin: 0 auto;
  }
  .footer-section {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: 24px;
    margin-bottom: 24px;
    text-align: left;
  }
  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }
  .footer-col h4 {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 4px;
  }
  .footer-col a {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }
  .footer-col a:hover {
    color: var(--color-primary);
  }
  .footer-copy {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-align: center;
  }
</style>
