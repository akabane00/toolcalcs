---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEOHead from '../components/SEOHead.astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  type?: 'website' | 'article';
  noindex?: boolean;
  structuredData?: object | object[];
}

const props = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <SEOHead {...props} />
  <!-- Google AdSense -->
  <meta name="google-adsense-account" content="ca-pub-1658942662433818">
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1658942662433818" crossorigin="anonymous"></script>
  <!-- Google Analytics 4 -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-M0BQJJYZPX"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-M0BQJJYZPX');
  </script>
</head>
<body>
  <a href="#main-content" class="skip-link">Skip to content</a>
  <Header />
  <main class="site-main" id="main-content">
    <slot />
  </main>
  <Footer />
</body>
</html>

<style>
  .site-main {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 32px 20px;
    flex: 1;
  }
</style>
