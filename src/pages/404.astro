---
import BaseLayout from '../layouts/BaseLayout.astro';
import { categories } from '../data/calculators';
---

<BaseLayout
  title="Page Not Found - ToolCalcs"
  description="The page you are looking for does not exist. Browse our free online calculators for finance, health, and math."
  noindex={true}
>
  <div class="not-found">
    <div class="not-found-icon">404</div>
    <h1>Page Not Found</h1>
    <p>Sorry, the page you are looking for does not exist or has been moved.</p>
    <a href="/" class="home-btn">Go to Homepage</a>

    <div class="browse-section">
      <h2>Browse Our Calculators</h2>
      <div class="category-links">
        {categories.map(cat => (
          <a href={`/${cat.slug}/`} class="category-link">
            <span class="cat-icon">{cat.icon}</span>
            {cat.name}
          </a>
        ))}
      </div>
    </div>

    <div class="browse-section">
      <h2>Quick Tools</h2>
      <div class="category-links">
        <a href="/convert/" class="category-link"><span class="cat-icon">üîÑ</span> Unit Conversions</a>
        <a href="/percentage/" class="category-link"><span class="cat-icon">%</span> Percentages</a>
        <a href="/how-many/" class="category-link"><span class="cat-icon">üî¢</span> How Many?</a>
        <a href="/days-until/" class="category-link"><span class="cat-icon">üìÖ</span> Countdowns</a>
        <a href="/currency/" class="category-link"><span class="cat-icon">üí±</span> Currency</a>
      </div>
    </div>

    <div class="browse-section">
      <h2>More on ToolCalcs</h2>
      <div class="category-links">
        <a href="/test/" class="category-link"><span class="cat-icon">üéÆ</span> Tests & Games</a>
        <a href="/tools/" class="category-link"><span class="cat-icon">üõ†Ô∏è</span> Web Tools</a>
        <a href="/worksheets/" class="category-link"><span class="cat-icon">üìù</span> Worksheets</a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .not-found {
    text-align: center;
    padding: 60px 0 40px;
    max-width: 600px;
    margin: 0 auto;
  }
  .not-found-icon {
    font-size: 5rem;
    font-weight: 800;
    color: var(--color-primary);
    opacity: 0.3;
    line-height: 1;
    margin-bottom: 16px;
  }
  h1 {
    font-size: 1.8rem;
    margin-bottom: 12px;
  }
  p {
    color: var(--color-text-muted);
    font-size: 1.05rem;
    margin-bottom: 24px;
  }
  .home-btn {
    display: inline-block;
    background: var(--color-primary);
    color: #fff;
    padding: 12px 32px;
    border-radius: var(--radius);
    font-weight: 600;
    font-size: 1rem;
    transition: background 0.15s;
  }
  .home-btn:hover {
    background: var(--color-primary-dark);
    text-decoration: none;
  }
  .browse-section {
    margin-top: 48px;
    text-align: center;
  }
  .browse-section h2 {
    font-size: 1.2rem;
    margin-bottom: 16px;
  }
  .category-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
  }
  .category-link {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    font-size: 0.9rem;
    color: var(--color-text);
    background: var(--color-surface);
    transition: border-color 0.15s, box-shadow 0.15s;
  }
  .category-link:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-sm);
    text-decoration: none;
  }
  .cat-icon {
    font-size: 1.1rem;
  }
</style>
