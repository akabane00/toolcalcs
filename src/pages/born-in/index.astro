---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { getAllBornInPages } from '../../data/born-in-years';
import '../../styles/calculator.css';

const allPages = getAllBornInPages();
const buildYear = new Date().getFullYear();

// Group by decade
const decades = new Map<string, typeof allPages>();
for (const page of allPages) {
  const decade = `${Math.floor(page.year / 10) * 10}s`;
  if (!decades.has(decade)) decades.set(decade, []);
  decades.get(decade)!.push(page);
}

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://toolcalcs.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Age Calculator",
      "item": "https://toolcalcs.com/date-time-calculators/age-calculator/"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Born In Year"
    }
  ]
};
---

<BaseLayout
  title="Born In What Year? Find Your Age by Birth Year | ToolCalcs"
  description={`Find out how old you are based on your birth year. Browse ${allPages.length} birth years from 1920 to 2025 with age, generation, and zodiac information.`}
  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <a href="/date-time-calculators/age-calculator/">Age Calculator</a> &rsaquo; <span>Born In Year</span>
  </nav>

  <h1>Born In What Year?</h1>
  <p class="page-desc">Select your birth year to find out how old you are in {buildYear}. Browse {allPages.length} birth years with generation and Chinese zodiac details.</p>

  <AdUnit slot="bornin-idx-top" format="horizontal" />

  {[...decades.entries()].reverse().map(([decade, pages]) => (
    <section class="decade-section">
      <h2 class="decade-heading">{decade}</h2>
      <div class="year-grid">
        {pages.map((p) => (
          <a href={`/born-in/${p.slug}/`} class="year-card">
            <span class="year-num">{p.year}</span>
            <span class="year-age">Age {p.turningAge - 1}â€“{p.turningAge}</span>
            <span class="year-gen">{p.generation}</span>
          </a>
        ))}
      </div>
    </section>
  ))}

  <AdUnit slot="bornin-idx-bottom" format="horizontal" />
</BaseLayout>

<style>
  .decade-section {
    margin-bottom: 32px;
  }
  .decade-heading {
    font-size: 1.2rem;
    font-weight: 700;
    margin-bottom: 12px;
    padding-bottom: 8px;
    border-bottom: 2px solid var(--color-border);
    color: var(--color-text);
  }
  .year-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 10px;
  }
  .year-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    padding: 14px 10px;
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    text-decoration: none;
    color: var(--color-text);
    transition: border-color 0.15s, box-shadow 0.15s;
  }
  .year-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 2px 8px rgba(37, 99, 235, 0.1);
  }
  .year-num {
    font-size: 1.25rem;
    font-weight: 800;
    color: var(--color-primary);
  }
  .year-age {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-text);
  }
  .year-gen {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .year-grid {
      grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    }
    .year-num {
      font-size: 1.1rem;
    }
  }
</style>
