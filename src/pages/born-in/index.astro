---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { getAllBornInPages } from '../../data/born-in-years';
import '../../styles/category.css';

const allPages = getAllBornInPages();

// Group by decade
const decades = new Map<string, typeof allPages>();
for (const p of allPages) {
  const decade = `${Math.floor(p.year / 10) * 10}s`;
  if (!decades.has(decade)) decades.set(decade, []);
  decades.get(decade)!.push(p);
}

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://toolcalcs.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Born In Calculator"
    }
  ]
};
---

<BaseLayout
  title="Born In Year Calculator - How Old Am I? | ToolCalcs"
  description="Find out how old you are based on your birth year. Browse all years from 1920 to 2025 with age, generation, and Chinese zodiac information."
  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <span>Born In Calculator</span>
  </nav>

  <h1>Born In Year Calculator</h1>
  <p class="page-desc">Select your birth year to find out exactly how old you are.</p>

  <AdUnit slot="born-in-idx-top" format="horizontal" />

  {[...decades.entries()].reverse().map(([decade, pages]) => (
    <section class="decade-section">
      <h2 class="decade-heading">{decade}</h2>
      <div class="category-grid">
        {pages.map((p) => (
          <a href={`/born-in/${p.slug}/`} class="category-card">
            <span class="card-year">{p.year}</span>
            <span class="card-age">Turning {p.turningAge}</span>
            <span class="card-gen">{p.generation}</span>
          </a>
        ))}
      </div>
    </section>
  ))}

  <AdUnit slot="born-in-idx-bottom" format="horizontal" />
</BaseLayout>

<style>
  .decade-section {
    margin-bottom: 32px;
  }
  .decade-heading {
    font-size: 1.2rem;
    font-weight: 700;
    margin-bottom: 12px;
    padding-bottom: 8px;
    border-bottom: 2px solid var(--color-border);
    color: var(--color-text);
  }
  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 10px;
  }
  .category-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    padding: 14px 10px;
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    text-decoration: none;
    color: var(--color-text);
    transition: border-color 0.15s, box-shadow 0.15s;
  }
  .category-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 2px 8px rgba(37, 99, 235, 0.1);
  }
  .card-year {
    font-size: 1.3rem;
    font-weight: 800;
    color: var(--color-primary);
  }
  .card-age {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-text);
  }
  .card-gen {
    font-size: 0.7rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 640px) {
    .category-grid {
      grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    }
    .card-year {
      font-size: 1.1rem;
    }
  }
</style>
