---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { getCalculatorsByCategory } from '../../data/calculators';
import '../../styles/category.css';

const calcs = getCalculatorsByCategory('conversion-calculators');

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://toolcalcs.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Conversion Calculators"
    }
  ]
};
---

<BaseLayout
  title="Conversion Calculators - Unit, Currency & Measurement Tools"
  description="Free conversion calculators: unit converter, currency converter, and more. Convert length, weight, temperature, and currency instantly."

  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <span>Conversion Calculators</span>
  </nav>

  <h1>Conversion Calculators</h1>
  <p class="page-desc">Free tools to convert units, currencies, and measurements instantly.</p>

  <AdUnit slot="cat-top" format="horizontal" />

  <div class="calc-grid">
    {calcs.map(calc => (
      <a href={`/conversion-calculators/${calc.slug}/`} class="calc-card">
        <span class="calc-icon">{calc.icon}</span>
        <h2>{calc.title}</h2>
        <p>{calc.description}</p>
      </a>
    ))}
  </div>

  <AdUnit slot="cat-bottom" format="horizontal" />
</BaseLayout>

