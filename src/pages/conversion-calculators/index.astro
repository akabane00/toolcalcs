---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { getCalculatorsByCategory } from '../../data/calculators';
import '../../styles/category.css';

const calcs = getCalculatorsByCategory('conversion-calculators');

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://toolcalcs.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Conversion Calculators"
    }
  ]
};
---

<BaseLayout
  title="Conversion Calculators - Unit, Currency & Measurement Tools"
  description="Free conversion calculators: unit converter, currency converter, and more. Convert length, weight, temperature, and currency instantly."

  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <span>Conversion Calculators</span>
  </nav>

  <h1>Conversion Calculators</h1>
  <p class="page-desc">Free tools to convert units, currencies, and measurements instantly.</p>

  <AdUnit slot="cat-top" format="horizontal" />

  <div class="calc-grid">
    {calcs.map(calc => (
      <a href={`/conversion-calculators/${calc.slug}/`} class="calc-card">
        <span class="calc-icon">{calc.icon}</span>
        <h2>{calc.title}</h2>
        <p>{calc.description}</p>
      </a>
    ))}
  </div>

  <section class="quick-ref">
    <h2>Quick Reference Tools</h2>
    <p class="quick-ref-desc">Instant conversion lookups:</p>
    <div class="quick-ref-grid">
      <a href="/convert/" class="quick-ref-card"><span>ðŸ”„</span> Unit Conversions</a>
      <a href="/currency/" class="quick-ref-card"><span>ðŸ’±</span> Currency Conversions</a>
      <a href="/how-many/" class="quick-ref-card"><span>ðŸ”¢</span> How Many?</a>
    </div>
  </section>

  <AdUnit slot="cat-bottom" format="horizontal" />
</BaseLayout>

<style>
  .quick-ref { margin-top: 40px; }
  .quick-ref h2 { font-size: 1.3rem; margin-bottom: 6px; }
  .quick-ref-desc { color: var(--color-text-muted); font-size: 0.9rem; margin-bottom: 16px; }
  .quick-ref-grid { display: flex; flex-wrap: wrap; gap: 10px; }
  .quick-ref-card {
    display: inline-flex; align-items: center; gap: 6px;
    padding: 10px 16px; border: 1px solid var(--color-border);
    border-radius: var(--radius); font-size: 0.9rem;
    color: var(--color-text); background: var(--color-surface);
    transition: border-color 0.15s, color 0.15s;
  }
  .quick-ref-card:hover { border-color: var(--color-primary); color: var(--color-primary); text-decoration: none; }
  .quick-ref-card span { font-size: 1.1rem; }
</style>
