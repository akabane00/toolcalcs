<script is:inline>
  var units = {
    length: {
      'Millimeters': 0.001,
      'Centimeters': 0.01,
      'Meters': 1,
      'Kilometers': 1000,
      'Inches': 0.0254,
      'Feet': 0.3048,
      'Yards': 0.9144,
      'Miles': 1609.344
    },
    weight: {
      'Milligrams': 0.000001,
      'Grams': 0.001,
      'Kilograms': 1,
      'Ounces': 0.0283495,
      'Pounds': 0.453592,
      'Tons': 907.185
    },
    temperature: {
      'Celsius': 'C',
      'Fahrenheit': 'F',
      'Kelvin': 'K'
    },
    volume: {
      'Milliliters': 0.001,
      'Liters': 1,
      'Gallons': 3.78541,
      'Quarts': 0.946353,
      'Pints': 0.473176,
      'Cups': 0.236588,
      'Fluid Ounces': 0.0295735
    }
  };

  var currentCategory = 'length';
  var convertDirection = 'forward'; // 'forward' = fromValue changed, 'reverse' = toValue changed

  function populateDropdowns(category) {
    var fromSelect = document.getElementById('fromUnit');
    var toSelect = document.getElementById('toUnit');
    var unitNames = Object.keys(units[category]);

    fromSelect.innerHTML = '';
    toSelect.innerHTML = '';

    unitNames.forEach(function(name) {
      var opt1 = document.createElement('option');
      opt1.value = name;
      opt1.textContent = name;
      fromSelect.appendChild(opt1);

      var opt2 = document.createElement('option');
      opt2.value = name;
      opt2.textContent = name;
      toSelect.appendChild(opt2);
    });

    // Set default from/to
    if (category === 'length') {
      fromSelect.value = 'Meters';
      toSelect.value = 'Feet';
    } else if (category === 'weight') {
      fromSelect.value = 'Kilograms';
      toSelect.value = 'Pounds';
    } else if (category === 'temperature') {
      fromSelect.value = 'Celsius';
      toSelect.value = 'Fahrenheit';
    } else if (category === 'volume') {
      fromSelect.value = 'Liters';
      toSelect.value = 'Gallons';
    }
  }

  function convertTemperature(value, from, to) {
    if (from === to) return value;

    // Convert to Celsius first
    var celsius;
    if (from === 'Celsius') {
      celsius = value;
    } else if (from === 'Fahrenheit') {
      celsius = (value - 32) * 5 / 9;
    } else if (from === 'Kelvin') {
      celsius = value - 273.15;
    }

    // Convert from Celsius to target
    if (to === 'Celsius') return celsius;
    if (to === 'Fahrenheit') return (celsius * 9 / 5) + 32;
    if (to === 'Kelvin') return celsius + 273.15;
    return value;
  }

  function convertUnits(direction) {
    var fromValue = parseFloat(document.getElementById('fromValue').value);
    var toValue = parseFloat(document.getElementById('toValue').value);
    var fromUnit = document.getElementById('fromUnit').value;
    var toUnit = document.getElementById('toUnit').value;
    var summaryEl = document.getElementById('conversionSummary');

    if (direction === 'forward') {
      if (isNaN(fromValue)) {
        document.getElementById('toValue').value = '';
        summaryEl.textContent = '';
        return;
      }

      var result;
      if (currentCategory === 'temperature') {
        result = convertTemperature(fromValue, fromUnit, toUnit);
      } else {
        var baseValue = fromValue * units[currentCategory][fromUnit];
        result = baseValue / units[currentCategory][toUnit];
      }

      document.getElementById('toValue').value = formatResult(result);
      summaryEl.textContent = formatResult(fromValue) + ' ' + fromUnit + ' = ' + formatResult(result) + ' ' + toUnit;
    } else {
      if (isNaN(toValue)) {
        document.getElementById('fromValue').value = '';
        summaryEl.textContent = '';
        return;
      }

      var result;
      if (currentCategory === 'temperature') {
        result = convertTemperature(toValue, toUnit, fromUnit);
      } else {
        var baseValue = toValue * units[currentCategory][toUnit];
        result = baseValue / units[currentCategory][fromUnit];
      }

      document.getElementById('fromValue').value = formatResult(result);
      summaryEl.textContent = formatResult(toValue) + ' ' + toUnit + ' = ' + formatResult(result) + ' ' + fromUnit;
    }
  }

  function formatResult(num) {
    if (Number.isInteger(num)) return num.toString();
    var str = num.toFixed(6);
    // Remove trailing zeros but keep at least one decimal place if there are decimals
    str = str.replace(/(\.\d*?)0+$/, '$1');
    str = str.replace(/\.$/, '');
    return str;
  }

  function switchTab(category) {
    currentCategory = category;
    document.querySelectorAll('.tab-btn').forEach(function(btn) {
      btn.classList.remove('active');
      if (btn.getAttribute('data-tab') === category) {
        btn.classList.add('active');
      }
    });
    document.getElementById('fromValue').value = '1';
    document.getElementById('toValue').value = '';
    populateDropdowns(category);
    convertUnits('forward');
  }

  function swapUnits() {
    var fromSelect = document.getElementById('fromUnit');
    var toSelect = document.getElementById('toUnit');
    var fromVal = document.getElementById('fromValue');
    var toVal = document.getElementById('toValue');

    var tempUnit = fromSelect.value;
    fromSelect.value = toSelect.value;
    toSelect.value = tempUnit;

    var tempValue = fromVal.value;
    fromVal.value = toVal.value;
    toVal.value = tempValue;

    convertUnits('forward');
  }

  // Tab button event listeners
  document.querySelectorAll('.tab-btn').forEach(function(btn) {
    btn.addEventListener('click', function() {
      switchTab(this.getAttribute('data-tab'));
    });
  });

  // Input event listeners for bidirectional conversion
  document.getElementById('fromValue').addEventListener('input', function() {
    convertUnits('forward');
  });

  document.getElementById('toValue').addEventListener('input', function() {
    convertUnits('reverse');
  });

  // Dropdown change event listeners
  document.getElementById('fromUnit').addEventListener('change', function() {
    convertUnits('forward');
  });

  document.getElementById('toUnit').addEventListener('change', function() {
    convertUnits('forward');
  });

  // Swap button
  document.getElementById('swapBtn').addEventListener('click', swapUnits);

  // Initialize
  populateDropdowns('length');
  convertUnits('forward');
</script>
