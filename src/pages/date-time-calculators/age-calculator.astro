<script>
  const dobInput = document.getElementById('dob') as HTMLInputElement;
  const asofInput = document.getElementById('asof') as HTMLInputElement;

  // Set default "as of" date to today
  const today = new Date();
  asofInput.value = formatDateForInput(today);

  function formatDateForInput(date: Date): string {
    const y = date.getFullYear();
    const m = String(date.getMonth() + 1).padStart(2, '0');
    const d = String(date.getDate()).padStart(2, '0');
    return `${y}-${m}-${d}`;
  }

  function calculateAge() {
    const dobVal = dobInput.value;
    const asofVal = asofInput.value;
    if (!dobVal || !asofVal) return;

    const dob = new Date(dobVal + 'T00:00:00');
    const asof = new Date(asofVal + 'T00:00:00');

    if (isNaN(dob.getTime()) || isNaN(asof.getTime())) return;
    if (asof < dob) return;

    // Calculate exact age in years, months, days
    let years = asof.getFullYear() - dob.getFullYear();
    let months = asof.getMonth() - dob.getMonth();
    let days = asof.getDate() - dob.getDate();

    if (days < 0) {
      months--;
      // Get the number of days in the previous month relative to asof
      const prevMonth = new Date(asof.getFullYear(), asof.getMonth(), 0);
      days += prevMonth.getDate();
    }

    if (months < 0) {
      years--;
      months += 12;
    }

    // Total months
    const totalMonths = years * 12 + months;

    // Total days (using millisecond difference)
    const msPerDay = 1000 * 60 * 60 * 24;
    const totalDaysLived = Math.floor((asof.getTime() - dob.getTime()) / msPerDay);

    // Total weeks
    const totalWeeks = Math.floor(totalDaysLived / 7);

    // Day of week born
    const dayNames = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
    const dayOfBirth = dayNames[dob.getDay()];

    // Next birthday calculation
    let nextBirthday = new Date(asof.getFullYear(), dob.getMonth(), dob.getDate());

    // Handle Feb 29 birthday in non-leap years
    if (dob.getMonth() === 1 && dob.getDate() === 29) {
      const yr = asof.getFullYear();
      if (!isLeapYear(yr)) {
        nextBirthday = new Date(yr, 2, 1); // March 1 in non-leap years
      }
      // If that date has passed, find the next occurrence
      if (nextBirthday <= asof) {
        let nextYear = yr + 1;
        if (isLeapYear(nextYear)) {
          nextBirthday = new Date(nextYear, 1, 29);
        } else {
          nextBirthday = new Date(nextYear, 2, 1);
        }
      }
    } else {
      if (nextBirthday <= asof) {
        nextBirthday = new Date(asof.getFullYear() + 1, dob.getMonth(), dob.getDate());
      }
    }

    const daysUntilBirthday = Math.ceil((nextBirthday.getTime() - asof.getTime()) / msPerDay);

    // Zodiac sign
    const zodiac = getZodiacSign(dob.getMonth() + 1, dob.getDate());

    // Update the DOM
    document.getElementById('ageYears')!.textContent = String(years);
    const monthLabel = months === 1 ? 'month' : 'months';
    const dayLabel = days === 1 ? 'day' : 'days';
    const yearLabel = years === 1 ? 'year' : 'years';
    document.getElementById('ageDetail')!.textContent = `${years} ${yearLabel}, ${months} ${monthLabel}, ${days} ${dayLabel}`;

    document.getElementById('totalMonths')!.textContent = totalMonths.toLocaleString();
    document.getElementById('totalWeeks')!.textContent = totalWeeks.toLocaleString();
    document.getElementById('totalDays')!.textContent = totalDaysLived.toLocaleString();

    document.getElementById('dayOfBirth')!.textContent = dayOfBirth;

    const nextBdayStr = nextBirthday.toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' });
    document.getElementById('nextBirthday')!.textContent = nextBdayStr;
    const bdayDayLabel = daysUntilBirthday === 1 ? 'day' : 'days';
    document.getElementById('nextBirthdayDays')!.textContent = `${daysUntilBirthday} ${bdayDayLabel} away`;

    document.getElementById('zodiacSign')!.textContent = zodiac;
  }

  function isLeapYear(year: number): boolean {
    return (year % 4 === 0 && year % 100 !== 0) || (year % 400 === 0);
  }

  function getZodiacSign(month: number, day: number): string {
    if ((month === 3 && day >= 21) || (month === 4 && day <= 19)) return 'Aries';
    if ((month === 4 && day >= 20) || (month === 5 && day <= 20)) return 'Taurus';
    if ((month === 5 && day >= 21) || (month === 6 && day <= 20)) return 'Gemini';
    if ((month === 6 && day >= 21) || (month === 7 && day <= 22)) return 'Cancer';
    if ((month === 7 && day >= 23) || (month === 8 && day <= 22)) return 'Leo';
    if ((month === 8 && day >= 23) || (month === 9 && day <= 22)) return 'Virgo';
    if ((month === 9 && day >= 23) || (month === 10 && day <= 22)) return 'Libra';
    if ((month === 10 && day >= 23) || (month === 11 && day <= 21)) return 'Scorpio';
    if ((month === 11 && day >= 22) || (month === 12 && day <= 21)) return 'Sagittarius';
    if ((month === 12 && day >= 22) || (month === 1 && day <= 19)) return 'Capricorn';
    if ((month === 1 && day >= 20) || (month === 2 && day <= 18)) return 'Aquarius';
    if ((month === 2 && day >= 19) || (month === 3 && day <= 20)) return 'Pisces';
    return '';
  }

  dobInput.addEventListener('change', calculateAge);
  asofInput.addEventListener('change', calculateAge);
</script>