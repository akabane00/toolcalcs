<script>
  const targetDateInput = document.getElementById('targetDate') as HTMLInputElement;
  const quickButtons = document.querySelectorAll('.quick-btn');

  function formatDateForInput(date: Date): string {
    const y = date.getFullYear();
    const m = String(date.getMonth() + 1).padStart(2, '0');
    const d = String(date.getDate()).padStart(2, '0');
    return `${y}-${m}-${d}`;
  }

  function getNextOccurrence(month: number, day: number): Date {
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    const thisYear = today.getFullYear();
    let target = new Date(thisYear, month, day);
    if (target <= today) {
      target = new Date(thisYear + 1, month, day);
    }
    return target;
  }

  function setHoliday(holiday: string) {
    let target: Date;
    switch (holiday) {
      case 'christmas':
        target = getNextOccurrence(11, 25); // Dec 25
        break;
      case 'newyear':
        target = getNextOccurrence(0, 1); // Jan 1
        break;
      case 'halloween':
        target = getNextOccurrence(9, 31); // Oct 31
        break;
      case 'july4':
        target = getNextOccurrence(6, 4); // Jul 4
        break;
      case 'valentines':
        target = getNextOccurrence(1, 14); // Feb 14
        break;
      default:
        return;
    }
    targetDateInput.value = formatDateForInput(target);
    calculate();
  }

  quickButtons.forEach((btn) => {
    btn.addEventListener('click', () => {
      const holiday = (btn as HTMLElement).dataset.holiday;
      if (holiday) setHoliday(holiday);
    });
  });

  function calculate() {
    const targetVal = targetDateInput.value;
    if (!targetVal) return;

    const today = new Date();
    today.setHours(0, 0, 0, 0);
    const target = new Date(targetVal + 'T00:00:00');

    if (isNaN(target.getTime())) return;

    const msPerDay = 1000 * 60 * 60 * 24;
    const diffMs = target.getTime() - today.getTime();
    const totalDays = Math.ceil(diffMs / msPerDay);

    // If the date is in the past, show 0 or the negative-aware result
    const absDays = Math.abs(totalDays);
    const isPast = totalDays < 0;

    // Days Until (primary)
    const daysUntilEl = document.getElementById('daysUntil')!;
    const daysUntilDetailEl = document.getElementById('daysUntilDetail')!;
    if (totalDays === 0) {
      daysUntilEl.textContent = '0';
      daysUntilDetailEl.textContent = "That's today!";
    } else if (isPast) {
      daysUntilEl.textContent = absDays.toLocaleString();
      const pastLabel = absDays === 1 ? 'day ago' : 'days ago';
      daysUntilDetailEl.textContent = pastLabel;
    } else {
      daysUntilEl.textContent = totalDays.toLocaleString();
      const futureLabel = totalDays === 1 ? 'day remaining' : 'days remaining';
      daysUntilDetailEl.textContent = futureLabel;
    }

    // Weeks & Days
    const fullWeeks = Math.floor(absDays / 7);
    const remainingDays = absDays % 7;
    const weeksDaysEl = document.getElementById('weeksDays')!;
    if (absDays === 0) {
      weeksDaysEl.textContent = '--';
    } else if (remainingDays === 0) {
      const wkLabel = fullWeeks === 1 ? 'week' : 'weeks';
      weeksDaysEl.textContent = `${fullWeeks} ${wkLabel}`;
    } else if (fullWeeks === 0) {
      const dLabel = remainingDays === 1 ? 'day' : 'days';
      weeksDaysEl.textContent = `${remainingDays} ${dLabel}`;
    } else {
      const wkLabel = fullWeeks === 1 ? 'wk' : 'wks';
      const dLabel = remainingDays === 1 ? 'day' : 'days';
      weeksDaysEl.textContent = `${fullWeeks} ${wkLabel}, ${remainingDays} ${dLabel}`;
    }

    // Months & Days
    const monthsDaysEl = document.getElementById('monthsDays')!;
    if (absDays === 0) {
      monthsDaysEl.textContent = '--';
    } else {
      const earlier = isPast ? target : today;
      const later = isPast ? today : target;
      let months = later.getFullYear() * 12 + later.getMonth() - (earlier.getFullYear() * 12 + earlier.getMonth());
      let days = later.getDate() - earlier.getDate();
      if (days < 0) {
        months--;
        const prevMonth = new Date(later.getFullYear(), later.getMonth(), 0);
        days += prevMonth.getDate();
      }
      const moLabel = months === 1 ? 'mo' : 'mos';
      const dLabel = days === 1 ? 'day' : 'days';
      if (months === 0) {
        monthsDaysEl.textContent = `${days} ${dLabel}`;
      } else if (days === 0) {
        monthsDaysEl.textContent = `${months} ${moLabel}`;
      } else {
        monthsDaysEl.textContent = `${months} ${moLabel}, ${days} ${dLabel}`;
      }
    }

    // Business Days & Weekend Days
    let businessDays = 0;
    let weekendDays = 0;
    if (absDays > 0) {
      const start = isPast ? new Date(target.getTime()) : new Date(today.getTime());
      const tempDate = new Date(start.getTime());
      tempDate.setDate(tempDate.getDate() + 1); // start from day after start date
      for (let i = 0; i < absDays; i++) {
        const dayOfWeek = tempDate.getDay();
        if (dayOfWeek === 0 || dayOfWeek === 6) {
          weekendDays++;
        } else {
          businessDays++;
        }
        tempDate.setDate(tempDate.getDate() + 1);
      }
    }
    document.getElementById('businessDays')!.textContent = absDays === 0 ? '--' : businessDays.toLocaleString();
    document.getElementById('weekendDays')!.textContent = absDays === 0 ? '--' : weekendDays.toLocaleString();

    // Day of Week
    const dayNames = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
    const dayOfWeekEl = document.getElementById('dayOfWeek')!;
    dayOfWeekEl.textContent = absDays === 0 ? dayNames[today.getDay()] : dayNames[target.getDay()];
  }

  targetDateInput.addEventListener('change', calculate);
</script>
