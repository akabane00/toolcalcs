---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { getCalculatorsByCategory } from '../../data/calculators';
import '../../styles/category.css';

const calcs = getCalculatorsByCategory('date-time-calculators');

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://toolcalcs.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Date & Time Calculators"
    }
  ]
};
---

<BaseLayout
  title="Date & Time Calculators - Age, Date Difference & Countdown Tools"
  description="Free date and time calculators: age calculator, date difference, days until countdown, and more. Fast and accurate date tools."

  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <span>Date & Time Calculators</span>
  </nav>

  <h1>Date & Time Calculators</h1>
  <p class="page-desc">Free tools to calculate ages, date differences, countdowns, and more.</p>

  <AdUnit slot="cat-top" format="horizontal" />

  <div class="calc-grid">
    {calcs.map(calc => (
      <a href={`/date-time-calculators/${calc.slug}/`} class="calc-card">
        <span class="calc-icon">{calc.icon}</span>
        <h2>{calc.title}</h2>
        <p>{calc.description}</p>
      </a>
    ))}
  </div>

  <section class="quick-ref">
    <h2>Quick Reference Tools</h2>
    <p class="quick-ref-desc">Instant date and time lookups:</p>
    <div class="quick-ref-grid">
      <a href="/days-until/" class="quick-ref-card"><span>üìÖ</span> Countdowns</a>
      <a href="/time-zone/" class="quick-ref-card"><span>üåê</span> Time Zones</a>
      <a href="/born-in/" class="quick-ref-card"><span>üéÇ</span> Born In Year</a>
    </div>
  </section>

  <AdUnit slot="cat-bottom" format="horizontal" />
</BaseLayout>

<style>
  .quick-ref { margin-top: 40px; }
  .quick-ref h2 { font-size: 1.3rem; margin-bottom: 6px; }
  .quick-ref-desc { color: var(--color-text-muted); font-size: 0.9rem; margin-bottom: 16px; }
  .quick-ref-grid { display: flex; flex-wrap: wrap; gap: 10px; }
  .quick-ref-card {
    display: inline-flex; align-items: center; gap: 6px;
    padding: 10px 16px; border: 1px solid var(--color-border);
    border-radius: var(--radius); font-size: 0.9rem;
    color: var(--color-text); background: var(--color-surface);
    transition: border-color 0.15s, color 0.15s;
  }
  .quick-ref-card:hover { border-color: var(--color-primary); color: var(--color-primary); text-decoration: none; }
  .quick-ref-card span { font-size: 1.1rem; }
</style>
