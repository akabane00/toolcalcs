---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { getCalculatorsByCategory } from '../../data/calculators';
import '../../styles/category.css';

const calcs = getCalculatorsByCategory('date-time-calculators');

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://toolcalcs.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Date & Time Calculators"
    }
  ]
};
---

<BaseLayout
  title="Date & Time Calculators - Age, Date Difference & Countdown Tools"
  description="Free date and time calculators: age calculator, date difference, days until countdown, and more. Fast and accurate date tools."

  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <span>Date & Time Calculators</span>
  </nav>

  <h1>Date & Time Calculators</h1>
  <p class="page-desc">Free tools to calculate ages, date differences, countdowns, and more.</p>

  <AdUnit slot="cat-top" format="horizontal" />

  <div class="calc-grid">
    {calcs.map(calc => (
      <a href={`/date-time-calculators/${calc.slug}/`} class="calc-card">
        <span class="calc-icon">{calc.icon}</span>
        <h2>{calc.title}</h2>
        <p>{calc.description}</p>
      </a>
    ))}
  </div>

  <AdUnit slot="cat-bottom" format="horizontal" />
</BaseLayout>

