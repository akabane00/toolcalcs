<script is:inline>
  function calculateHours() {
    var dayRows = document.querySelectorAll('.day-row[data-day]');
    var totalMinutes = 0;

    dayRows.forEach(function(row) {
      var startInput = row.querySelector('.start-time');
      var endInput = row.querySelector('.end-time');
      var breakInput = row.querySelector('.break-minutes');
      var dailyDisplay = row.querySelector('.daily-hours');

      var startVal = startInput.value;
      var endVal = endInput.value;
      var breakMin = parseInt(breakInput.value) || 0;

      if (!startVal || !endVal) {
        dailyDisplay.textContent = '0.00';
        return;
      }

      var startParts = startVal.split(':');
      var endParts = endVal.split(':');
      var startMinutes = parseInt(startParts[0]) * 60 + parseInt(startParts[1]);
      var endMinutes = parseInt(endParts[0]) * 60 + parseInt(endParts[1]);

      var workedMinutes = endMinutes - startMinutes - breakMin;
      if (workedMinutes < 0) workedMinutes = 0;

      var dailyHours = workedMinutes / 60;
      dailyDisplay.textContent = dailyHours.toFixed(2);
      totalMinutes += workedMinutes;
    });

    var totalHours = totalMinutes / 60;
    var regularHours = Math.min(totalHours, 40);
    var overtimeHours = Math.max(totalHours - 40, 0);

    document.getElementById('totalWeekly').textContent = totalHours.toFixed(2);
    document.getElementById('regularHours').textContent = regularHours.toFixed(2);
    document.getElementById('overtimeHours').textContent = overtimeHours.toFixed(2);
  }

  document.getElementById('calculateBtn').addEventListener('click', calculateHours);

  // Initial calculation on load
  calculateHours();
</script>
