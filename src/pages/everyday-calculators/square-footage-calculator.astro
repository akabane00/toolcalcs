<script>
  // Unit conversion factors to feet
  function toFeet(value: number, unit: string): number {
    switch (unit) {
      case 'meters': return value * 3.28084;
      case 'inches': return value / 12;
      case 'yards': return value * 3;
      default: return value; // feet
    }
  }

  function formatNumber(n: number, decimals: number = 2): string {
    return n.toLocaleString('en-US', {
      minimumFractionDigits: decimals,
      maximumFractionDigits: decimals,
    });
  }

  function formatCurrency(n: number): string {
    return '$' + n.toLocaleString('en-US', {
      minimumFractionDigits: 2,
      maximumFractionDigits: 2,
    });
  }

  let activeShape = 'rectangle';

  function getSquareFeet(): number {
    let sqFt = 0;

    if (activeShape === 'rectangle') {
      const length = parseFloat((document.getElementById('rectLength') as HTMLInputElement).value) || 0;
      const width = parseFloat((document.getElementById('rectWidth') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('rectUnit') as HTMLSelectElement).value;
      const lengthFt = toFeet(length, unit);
      const widthFt = toFeet(width, unit);
      sqFt = lengthFt * widthFt;
    } else if (activeShape === 'circle') {
      const radius = parseFloat((document.getElementById('circRadius') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('circUnit') as HTMLSelectElement).value;
      const radiusFt = toFeet(radius, unit);
      sqFt = Math.PI * radiusFt * radiusFt;
    } else if (activeShape === 'triangle') {
      const base = parseFloat((document.getElementById('triBase') as HTMLInputElement).value) || 0;
      const height = parseFloat((document.getElementById('triHeight') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('triUnit') as HTMLSelectElement).value;
      const baseFt = toFeet(base, unit);
      const heightFt = toFeet(height, unit);
      sqFt = 0.5 * baseFt * heightFt;
    } else if (activeShape === 'lshape') {
      const overallW = parseFloat((document.getElementById('lOverallWidth') as HTMLInputElement).value) || 0;
      const overallD = parseFloat((document.getElementById('lOverallDepth') as HTMLInputElement).value) || 0;
      const cutoutW = parseFloat((document.getElementById('lCutoutWidth') as HTMLInputElement).value) || 0;
      const cutoutD = parseFloat((document.getElementById('lCutoutDepth') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('lUnit') as HTMLSelectElement).value;
      const owFt = toFeet(overallW, unit);
      const odFt = toFeet(overallD, unit);
      const cwFt = toFeet(cutoutW, unit);
      const cdFt = toFeet(cutoutD, unit);
      sqFt = (owFt * odFt) - (cwFt * cdFt);
      if (sqFt < 0) sqFt = 0;
    }

    return sqFt;
  }

  function calculate() {
    const sqFt = getSquareFeet();
    const sqM = sqFt / 10.764;
    const sqYd = sqFt / 9;
    const acres = sqFt / 43560;

    document.getElementById('resultSqFt')!.textContent = formatNumber(sqFt);
    document.getElementById('resultSqM')!.textContent = formatNumber(sqM);
    document.getElementById('resultSqYd')!.textContent = formatNumber(sqYd);

    // Show acres with more precision for small areas, fewer for large
    const acresCard = document.getElementById('acresCard') as HTMLElement;
    if (sqFt >= 1000) {
      acresCard.style.display = '';
      document.getElementById('resultAcres')!.textContent = formatNumber(acres, 4);
    } else {
      acresCard.style.display = 'none';
    }

    // Material cost estimator
    const pricePerSqFt = parseFloat((document.getElementById('pricePerSqFt') as HTMLInputElement).value) || 0;
    const totalCost = sqFt * pricePerSqFt;
    document.getElementById('totalCost')!.textContent = formatCurrency(totalCost);
  }

  // Shape tab switching
  document.querySelectorAll('.shape-tab').forEach((tab) => {
    tab.addEventListener('click', () => {
      const shape = (tab as HTMLElement).dataset.shape!;
      activeShape = shape;

      // Update active tab
      document.querySelectorAll('.shape-tab').forEach((t) => t.classList.remove('active'));
      tab.classList.add('active');

      // Update active panel
      document.querySelectorAll('.shape-panel').forEach((p) => p.classList.remove('active'));
      document.getElementById('panel-' + shape)!.classList.add('active');

      calculate();
    });
  });

  // Listen to all inputs for real-time calculation
  document.querySelectorAll('.calculator-box input, .calculator-box select').forEach((el) => {
    el.addEventListener('input', calculate);
  });

  // Initial calculation
  calculate();
</script>
