<script is:inline>
  function formatCurrency(n) {
    return '$' + n.toFixed(2);
  }

  function calculate() {
    var billInput = document.getElementById('billAmount');
    var tipInput = document.getElementById('tipPercent');
    var peopleInput = document.getElementById('numPeople');

    var bill = parseFloat(billInput.value) || 0;
    var tipPct = parseFloat(tipInput.value) || 0;
    var people = parseInt(peopleInput.value) || 1;

    if (bill < 0) bill = 0;
    if (tipPct < 0) tipPct = 0;
    if (people < 1) people = 1;

    var tipAmount = bill * (tipPct / 100);
    var totalAmount = bill + tipAmount;
    var tipPerPerson = tipAmount / people;
    var totalPerPerson = totalAmount / people;

    document.getElementById('tipAmount').textContent = formatCurrency(tipAmount);
    document.getElementById('totalAmount').textContent = formatCurrency(totalAmount);
    document.getElementById('tipPerPerson').textContent = formatCurrency(tipPerPerson);
    document.getElementById('totalPerPerson').textContent = formatCurrency(totalPerPerson);
  }

  // Real-time calculation on input changes
  document.getElementById('billAmount').addEventListener('input', calculate);
  document.getElementById('tipPercent').addEventListener('input', function() {
    var val = parseFloat(this.value) || 0;
    // Update active state on quick tip buttons
    document.querySelectorAll('.quick-tip-btn').forEach(function(btn) {
      var btnTip = parseInt(btn.getAttribute('data-tip'));
      if (btnTip === val) {
        btn.classList.add('active');
      } else {
        btn.classList.remove('active');
      }
    });
    calculate();
  });
  document.getElementById('numPeople').addEventListener('input', calculate);

  // Quick tip button handlers
  document.querySelectorAll('.quick-tip-btn').forEach(function(btn) {
    btn.addEventListener('click', function() {
      var tipVal = parseInt(this.getAttribute('data-tip'));
      document.getElementById('tipPercent').value = tipVal;
      document.querySelectorAll('.quick-tip-btn').forEach(function(b) {
        b.classList.remove('active');
      });
      this.classList.add('active');
      calculate();
    });
  });

  // Initial calculation on load
  calculate();
</script>
