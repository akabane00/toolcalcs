<script>
  function formatCurrency(n: number): string {
    return '$' + n.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
  }

  function calculate() {
    const currentAge = parseInt((document.getElementById('currentAge') as HTMLInputElement).value) || 30;
    const retirementAge = parseInt((document.getElementById('retirementAge') as HTMLInputElement).value) || 65;
    const currentBalance = parseFloat((document.getElementById('currentBalance') as HTMLInputElement).value) || 0;
    const annualContribution = parseFloat((document.getElementById('annualContribution') as HTMLInputElement).value) || 0;
    const employerMatchPct = (parseFloat((document.getElementById('employerMatch') as HTMLInputElement).value) || 0) / 100;
    const matchLimitPct = (parseFloat((document.getElementById('matchLimit') as HTMLInputElement).value) || 0) / 100;
    let annualSalary = parseFloat((document.getElementById('annualSalary') as HTMLInputElement).value) || 0;
    const annualReturn = (parseFloat((document.getElementById('annualReturn') as HTMLInputElement).value) || 0) / 100;
    const salaryIncrease = (parseFloat((document.getElementById('salaryIncrease') as HTMLInputElement).value) || 0) / 100;

    const years = Math.max(retirementAge - currentAge, 0);
    let balance = currentBalance;
    let totalContributions = 0;
    let totalMatchContributions = 0;

    const tableData: { age: number; contribution: number; match: number; balance: number }[] = [];

    for (let y = 0; y < years; y++) {
      const salary = annualSalary * Math.pow(1 + salaryIncrease, y);
      const contribution = annualContribution;
      const matchableAmount = salary * matchLimitPct;
      const employerContribution = Math.min(contribution, matchableAmount) * employerMatchPct;

      balance += contribution + employerContribution;
      balance *= (1 + annualReturn);

      totalContributions += contribution;
      totalMatchContributions += employerContribution;

      tableData.push({
        age: currentAge + y + 1,
        contribution: contribution,
        match: employerContribution,
        balance: balance,
      });
    }

    const totalGains = balance - currentBalance - totalContributions - totalMatchContributions;
    const monthlyIncome = (balance * 0.04) / 12;

    document.getElementById('balanceAtRetirement')!.textContent = formatCurrency(balance);
    document.getElementById('totalContributions')!.textContent = formatCurrency(totalContributions);
    document.getElementById('totalMatch')!.textContent = formatCurrency(totalMatchContributions);
    document.getElementById('totalGains')!.textContent = formatCurrency(totalGains);
    document.getElementById('yearsToRetirement')!.textContent = years.toString();
    document.getElementById('monthlyIncome')!.textContent = formatCurrency(monthlyIncome);

    // Render table
    const tbody = document.querySelector('#growthTable tbody')!;
    tbody.innerHTML = tableData.map(d => `
      <tr>
        <td>${d.age}</td>
        <td>${formatCurrency(d.contribution)}</td>
        <td>${formatCurrency(d.match)}</td>
        <td>${formatCurrency(d.balance)}</td>
      </tr>
    `).join('');
  }

  document.getElementById('calculateBtn')?.addEventListener('click', calculate);
  calculate();
</script>
