        <label for="annualContribution">Annual Contribution ($)</label>
        <input type="number" id="annualContribution" value="6000" min="0" step="500" />
      </div>
      <div class="input-group">
        <label for="employerMatch">Employer Match (%)</label>
        <input type="number" id="employerMatch" value="50" min="0" max="100" step="5" />
      </div>
