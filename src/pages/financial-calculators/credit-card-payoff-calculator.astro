<script>
  function formatCurrency(n: number): string {
    return '$' + n.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 });
  }

  function calcFixedPayment(balance: number, apr: number, monthlyPmt: number): { months: number; totalInterest: number; totalPaid: number } {
    const monthlyRate = apr / 100 / 12;
    let remaining = balance;
    let totalInterest = 0;
    let months = 0;
    const maxMonths = 1200; // safety cap at 100 years

    if (monthlyPmt <= remaining * monthlyRate) {
      // Payment does not cover interest — will never pay off
      return { months: -1, totalInterest: -1, totalPaid: -1 };
    }

    while (remaining > 0 && months < maxMonths) {
      months++;
      const interest = remaining * monthlyRate;
      let principal = monthlyPmt - interest;
      if (principal > remaining) principal = remaining;
      remaining -= principal;
      totalInterest += interest;
      if (remaining < 0.01) remaining = 0;
    }

    return { months, totalInterest, totalPaid: balance + totalInterest };
  }

  function calcMinPayment(balance: number, apr: number, minPct: number): { months: number; totalInterest: number; totalPaid: number } {
    const monthlyRate = apr / 100 / 12;
    let remaining = balance;
    let totalInterest = 0;
    let totalPaid = 0;
    let months = 0;
    const maxMonths = 1200;

    while (remaining > 0 && months < maxMonths) {
      months++;
      const minPayment = Math.max(remaining * minPct / 100, 25);
      const interest = remaining * monthlyRate;

      if (minPayment <= interest && minPayment < 25.01) {
        // Minimum payment does not cover interest — will never pay off
        return { months: -1, totalInterest: -1, totalPaid: -1 };
      }

      let payment = minPayment;
      if (payment > remaining + interest) payment = remaining + interest;

      let principal = payment - interest;
      remaining -= principal;
      totalInterest += interest;
      totalPaid += payment;
      if (remaining < 0.01) remaining = 0;
    }

    return { months, totalInterest, totalPaid };
  }

  function calculate() {
    const balance = parseFloat((document.getElementById('balance') as HTMLInputElement).value) || 0;
    const apr = parseFloat((document.getElementById('apr') as HTMLInputElement).value) || 0;
    const monthlyPayment = parseFloat((document.getElementById('monthlyPayment') as HTMLInputElement).value) || 0;
    const minPct = parseFloat((document.getElementById('minPaymentPct') as HTMLInputElement).value) || 2;

    if (balance <= 0) return;

    // Fixed payment scenario
    const fixed = calcFixedPayment(balance, apr, monthlyPayment);

    if (fixed.months === -1) {
      document.getElementById('fixedMonths')!.textContent = 'Never';
      document.getElementById('fixedInterest')!.textContent = 'N/A';
      document.getElementById('fixedTotal')!.textContent = 'N/A';
    } else {
      document.getElementById('fixedMonths')!.textContent = String(fixed.months);
      document.getElementById('fixedInterest')!.textContent = formatCurrency(fixed.totalInterest);
      document.getElementById('fixedTotal')!.textContent = formatCurrency(fixed.totalPaid);
    }

    // Minimum payment scenario
    const min = calcMinPayment(balance, apr, minPct);

    if (min.months === -1) {
      document.getElementById('minMonths')!.textContent = 'Never';
      document.getElementById('minInterest')!.textContent = 'N/A';
      document.getElementById('minTotal')!.textContent = 'N/A';
    } else {
      document.getElementById('minMonths')!.textContent = String(min.months);
      document.getElementById('minInterest')!.textContent = formatCurrency(min.totalInterest);
      document.getElementById('minTotal')!.textContent = formatCurrency(min.totalPaid);
    }

    // Savings comparison
    if (fixed.months !== -1 && min.months !== -1) {
      const interestSaved = min.totalInterest - fixed.totalInterest;
      const monthsSaved = min.months - fixed.months;
      document.getElementById('interestSavings')!.textContent = formatCurrency(interestSaved > 0 ? interestSaved : 0);

      if (monthsSaved > 12) {
        const years = Math.floor(monthsSaved / 12);
        const remainMonths = monthsSaved % 12;
        document.getElementById('timeSaved')!.textContent = years + (years === 1 ? ' year' : ' years') + (remainMonths > 0 ? ', ' + remainMonths + (remainMonths === 1 ? ' month' : ' months') : '');
      } else {
        document.getElementById('timeSaved')!.textContent = monthsSaved + (monthsSaved === 1 ? ' month' : ' months');
      }
    } else if (fixed.months !== -1) {
      document.getElementById('interestSavings')!.textContent = 'Significant';
      document.getElementById('timeSaved')!.textContent = 'Decades';
    } else {
      document.getElementById('interestSavings')!.textContent = '$0';
      document.getElementById('timeSaved')!.textContent = '0 months';
    }
  }

  document.getElementById('calculateBtn')?.addEventListener('click', calculate);
  // Auto-calculate on load
  calculate();
</script>
