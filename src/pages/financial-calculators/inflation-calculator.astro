<script>
  function formatCurrency(n: number): string {
    return '$' + n.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
  }

  function formatPercent(n: number): string {
    return n.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) + '%';
  }

  function calculate() {
    const amount = parseFloat((document.getElementById('amount') as HTMLInputElement).value) || 0;
    const startYear = parseInt((document.getElementById('startYear') as HTMLInputElement).value) || 2000;
    const endYear = parseInt((document.getElementById('endYear') as HTMLInputElement).value) || 2025;
    const rate = (parseFloat((document.getElementById('inflationRate') as HTMLInputElement).value) || 0) / 100;

    const years = endYear - startYear;
    if (years === 0) {
      document.getElementById('originalAmount')!.textContent = formatCurrency(amount);
      document.getElementById('adjustedAmount')!.textContent = formatCurrency(amount);
      document.getElementById('powerChange')!.textContent = '0.00%';
      document.getElementById('cumulativeInflation')!.textContent = '0.00%';
      return;
    }

    // Adjusted = Amount * (1 + rate)^years
    const adjustedAmount = amount * Math.pow(1 + rate, years);

    // Cumulative inflation over the period
    const cumulativeInflation = (Math.pow(1 + rate, Math.abs(years)) - 1) * 100;

    // Purchasing power change
    let powerChange: number;
    if (years > 0) {
      // Forward in time: purchasing power decreases
      powerChange = ((amount / adjustedAmount) - 1) * 100;
    } else {
      // Backward in time: the adjusted amount is smaller
      powerChange = ((adjustedAmount / amount) - 1) * 100;
    }

    document.getElementById('originalAmount')!.textContent = formatCurrency(amount);
    document.getElementById('adjustedAmount')!.textContent = formatCurrency(adjustedAmount);
    document.getElementById('powerChange')!.textContent = formatPercent(powerChange);
    document.getElementById('cumulativeInflation')!.textContent = formatPercent(cumulativeInflation);
  }

  document.getElementById('calculateBtn')?.addEventListener('click', calculate);
  // Auto-calculate on load
  calculate();
</script>
