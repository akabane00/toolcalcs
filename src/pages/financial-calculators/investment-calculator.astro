<script>
  function formatCurrency(n: number): string {
    return '$' + n.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 });
  }

  function calculate() {
    const P = parseFloat((document.getElementById('initialInvestment') as HTMLInputElement).value) || 0;
    const monthly = parseFloat((document.getElementById('monthlyContribution') as HTMLInputElement).value) || 0;
    const r = (parseFloat((document.getElementById('annualReturn') as HTMLInputElement).value) || 0) / 100;
    const t = parseInt((document.getElementById('investmentPeriod') as HTMLInputElement).value) || 1;
    const n = parseInt((document.getElementById('compoundFrequency') as HTMLSelectElement).value) || 12;

    // FV = P(1 + r/n)^(nt) + PMT * [((1 + r/n)^(nt) - 1) / (r/n)]
    const ratePerPeriod = r / n;
    const totalPeriods = n * t;
    const monthsPerPeriod = 12 / n;
    const PMT = monthly * monthsPerPeriod; // contribution per compounding period

    let futureValue: number;
    if (ratePerPeriod === 0) {
      futureValue = P + PMT * totalPeriods;
    } else {
      const compoundFactor = Math.pow(1 + ratePerPeriod, totalPeriods);
      futureValue = P * compoundFactor + PMT * ((compoundFactor - 1) / ratePerPeriod);
    }

    const totalContributions = P + (monthly * 12 * t);
    const totalReturns = futureValue - totalContributions;
    const roi = totalContributions > 0 ? (totalReturns / totalContributions) * 100 : 0;

    // Effective annual rate: (1 + r/n)^n - 1
    const effectiveRate = r > 0 ? (Math.pow(1 + r / n, n) - 1) * 100 : 0;

    document.getElementById('futureValue')!.textContent = formatCurrency(futureValue);
    document.getElementById('totalContributions')!.textContent = formatCurrency(totalContributions);
    document.getElementById('totalReturns')!.textContent = formatCurrency(totalReturns);
    document.getElementById('roi')!.textContent = roi.toFixed(1) + '%';
    document.getElementById('effectiveRate')!.textContent = effectiveRate.toFixed(2) + '%';
    document.getElementById('initialDisplay')!.textContent = formatCurrency(P);
  }

  document.getElementById('calculateBtn')?.addEventListener('click', calculate);
  // Auto-calculate on load
  calculate();
</script>
