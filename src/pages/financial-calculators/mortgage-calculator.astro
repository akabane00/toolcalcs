<script>
  function formatCurrency(n: number): string {
    return '$' + n.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 });
  }

  function calculate() {
    const homePrice = parseFloat((document.getElementById('homePrice') as HTMLInputElement).value) || 0;
    const dpValue = parseFloat((document.getElementById('downPayment') as HTMLInputElement).value) || 0;
    const dpType = (document.getElementById('dpType') as HTMLSelectElement).value;
    const annualRate = parseFloat((document.getElementById('interestRate') as HTMLInputElement).value) || 0;
    const years = parseInt((document.getElementById('loanTerm') as HTMLSelectElement).value) || 30;
    const propertyTaxYear = parseFloat((document.getElementById('propertyTax') as HTMLInputElement).value) || 0;
    const insuranceYear = parseFloat((document.getElementById('homeInsurance') as HTMLInputElement).value) || 0;

    // Calculate down payment amount
    const downPayment = dpType === 'percent' ? homePrice * (dpValue / 100) : dpValue;
    const principal = homePrice - downPayment;

    if (principal <= 0 || annualRate <= 0) {
      document.getElementById('monthlyTotal')!.textContent = '$0';
      document.getElementById('monthlyPI')!.textContent = '$0';
      document.getElementById('monthlyTax')!.textContent = '$0';
      document.getElementById('monthlyInsurance')!.textContent = '$0';
      document.getElementById('totalInterest')!.textContent = '$0';
      document.getElementById('totalCost')!.textContent = '$0';
      return;
    }

    const r = annualRate / 100 / 12;
    const n = years * 12;

    // Monthly P&I using standard amortization formula
    const monthlyPI = principal * (r * Math.pow(1 + r, n)) / (Math.pow(1 + r, n) - 1);

    // Monthly tax and insurance
    const monthlyTax = propertyTaxYear / 12;
    const monthlyInsurance = insuranceYear / 12;

    // Total monthly payment
    const monthlyTotal = monthlyPI + monthlyTax + monthlyInsurance;

    // Total interest over loan life
    const totalInterest = (monthlyPI * n) - principal;

    // Total cost (all payments + down payment)
    const totalCost = (monthlyTotal * n) + downPayment;

    document.getElementById('monthlyTotal')!.textContent = formatCurrency(monthlyTotal);
    document.getElementById('monthlyPI')!.textContent = formatCurrency(monthlyPI);
    document.getElementById('monthlyTax')!.textContent = formatCurrency(monthlyTax);
    document.getElementById('monthlyInsurance')!.textContent = formatCurrency(monthlyInsurance);
    document.getElementById('totalInterest')!.textContent = formatCurrency(totalInterest);
    document.getElementById('totalCost')!.textContent = formatCurrency(totalCost);
  }

  document.getElementById('calculateBtn')?.addEventListener('click', calculate);

  // Update down payment placeholder when type changes
  document.getElementById('dpType')?.addEventListener('change', () => {
    const dpInput = document.getElementById('downPayment') as HTMLInputElement;
    const dpType = (document.getElementById('dpType') as HTMLSelectElement).value;
    if (dpType === 'percent') {
      dpInput.value = '20';
      dpInput.step = '1';
      dpInput.max = '100';
    } else {
      const homePrice = parseFloat((document.getElementById('homePrice') as HTMLInputElement).value) || 350000;
      dpInput.value = String(Math.round(homePrice * 0.2));
      dpInput.step = '1000';
      dpInput.removeAttribute('max');
    }
    calculate();
  });

  // Auto-calculate on load
  calculate();
</script>
