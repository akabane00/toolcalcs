<script>
  function formatCurrency(n: number): string {
    const prefix = n < 0 ? '-$' : '$';
    return prefix + Math.abs(n).toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 });
  }

  function calculate() {
    // Assets
    const cashSavings = parseFloat((document.getElementById('cashSavings') as HTMLInputElement).value) || 0;
    const checkingAccounts = parseFloat((document.getElementById('checkingAccounts') as HTMLInputElement).value) || 0;
    const investmentAccounts = parseFloat((document.getElementById('investmentAccounts') as HTMLInputElement).value) || 0;
    const retirementAccounts = parseFloat((document.getElementById('retirementAccounts') as HTMLInputElement).value) || 0;
    const homeValue = parseFloat((document.getElementById('homeValue') as HTMLInputElement).value) || 0;
    const vehicleValue = parseFloat((document.getElementById('vehicleValue') as HTMLInputElement).value) || 0;
    const otherAssets = parseFloat((document.getElementById('otherAssets') as HTMLInputElement).value) || 0;

    // Liabilities
    const mortgageBalance = parseFloat((document.getElementById('mortgageBalance') as HTMLInputElement).value) || 0;
    const autoLoans = parseFloat((document.getElementById('autoLoans') as HTMLInputElement).value) || 0;
    const studentLoans = parseFloat((document.getElementById('studentLoans') as HTMLInputElement).value) || 0;
    const creditCardDebt = parseFloat((document.getElementById('creditCardDebt') as HTMLInputElement).value) || 0;
    const otherDebts = parseFloat((document.getElementById('otherDebts') as HTMLInputElement).value) || 0;

    const totalAssets = cashSavings + checkingAccounts + investmentAccounts + retirementAccounts + homeValue + vehicleValue + otherAssets;
    const totalLiabilities = mortgageBalance + autoLoans + studentLoans + creditCardDebt + otherDebts;
    const netWorth = totalAssets - totalLiabilities;

    // Asset-to-Debt Ratio
    const assetDebtRatio = totalLiabilities > 0 ? (totalAssets / totalLiabilities) : (totalAssets > 0 ? Infinity : 0);

    // Liquid Net Worth: cash + checking + investments minus all liabilities
    const liquidAssets = cashSavings + checkingAccounts + investmentAccounts;
    const liquidNetWorth = liquidAssets - totalLiabilities;

    document.getElementById('netWorth')!.textContent = formatCurrency(netWorth);
    document.getElementById('totalAssets')!.textContent = formatCurrency(totalAssets);
    document.getElementById('totalLiabilities')!.textContent = formatCurrency(totalLiabilities);
    document.getElementById('assetDebtRatio')!.textContent = assetDebtRatio === Infinity ? 'No Debt' : assetDebtRatio.toFixed(2);
    document.getElementById('liquidNetWorth')!.textContent = formatCurrency(liquidNetWorth);
  }

  document.getElementById('calculateBtn')?.addEventListener('click', calculate);

  // Add real-time calculation on input change
  document.querySelectorAll('.nw-inputs input').forEach(input => {
    input.addEventListener('input', calculate);
  });

  // Auto-calculate on load
  calculate();
</script>
