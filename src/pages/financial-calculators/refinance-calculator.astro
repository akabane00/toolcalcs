    <ul>
      <li><a href="/financial-calculators/mortgage-calculator/">Mortgage Calculator</a> - Calculate monthly mortgage payments with taxes and insurance.</li>
      <li><a href="/financial-calculators/home-affordability-calculator/">Home Affordability Calculator</a> - Find out how much house you can afford.</li>
      <li><a href="/financial-calculators/loan-amortization-calculator/">Loan Amortization Calculator</a> - See a detailed amortization schedule for any loan.</li>
    </ul>
  </article>

  <AdUnit slot="calc-bottom" format="horizontal" />
</BaseLayout>

<script>
  function formatCurrency(n: number): string {
    return '$' + n.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
  }

  function calculateMonthlyPayment(principal: number, monthlyRate: number, totalPayments: number): number {
    if (monthlyRate === 0) return principal / totalPayments;
    return principal * (monthlyRate * Math.pow(1 + monthlyRate, totalPayments)) / (Math.pow(1 + monthlyRate, totalPayments) - 1);
  }

  function calculate() {
    const currentBalance = parseFloat((document.getElementById('currentBalance') as HTMLInputElement).value) || 0;
    const currentPayment = parseFloat((document.getElementById('currentPayment') as HTMLInputElement).value) || 0;
    const currentRate = (parseFloat((document.getElementById('currentRate') as HTMLInputElement).value) || 0) / 100;
    const remainingTerm = parseInt((document.getElementById('remainingTerm') as HTMLInputElement).value) || 25;
    const newRate = (parseFloat((document.getElementById('newRate') as HTMLInputElement).value) || 0) / 100;
    const newTermYears = parseInt((document.getElementById('newTerm') as HTMLSelectElement).value) || 30;
    const closingCosts = parseFloat((document.getElementById('closingCosts') as HTMLInputElement).value) || 0;

    const currentMonthlyRate = currentRate / 12;
    const remainingPayments = remainingTerm * 12;

    // Total cost of remaining old loan
    const oldTotalPaid = currentPayment * remainingPayments;
    const oldTotalInterest = oldTotalPaid - currentBalance;

    // New loan calculations
    const newMonthlyRate = newRate / 12;
    const newTotalPayments = newTermYears * 12;
    const newMonthlyPayment = calculateMonthlyPayment(currentBalance, newMonthlyRate, newTotalPayments);

    const newTotalPaid = newMonthlyPayment * newTotalPayments;
    const newTotalInterest = newTotalPaid - currentBalance;

    // Savings calculations
    const monthlySavings = currentPayment - newMonthlyPayment;
    const grossSavings = oldTotalInterest - newTotalInterest;
    const netSavings = grossSavings - closingCosts;

    // Break-even point (months)
    let breakEvenMonths = 0;
    if (monthlySavings > 0) {
      breakEvenMonths = Math.ceil(closingCosts / monthlySavings);
    }

    document.getElementById('newPayment')!.textContent = formatCurrency(newMonthlyPayment);
    document.getElementById('monthlySavings')!.textContent = monthlySavings > 0 ? formatCurrency(monthlySavings) : formatCurrency(0);
    document.getElementById('oldTotalInterest')!.textContent = formatCurrency(Math.max(oldTotalInterest, 0));
    document.getElementById('newTotalInterest')!.textContent = formatCurrency(Math.max(newTotalInterest, 0));
    document.getElementById('netSavings')!.textContent = netSavings > 0 ? formatCurrency(netSavings) : formatCurrency(0);
    document.getElementById('breakEven')!.textContent = monthlySavings > 0 ? breakEvenMonths + ' months' : 'N/A';
  }

  document.getElementById('calculateBtn')?.addEventListener('click', calculate);
  calculate();
</script>
