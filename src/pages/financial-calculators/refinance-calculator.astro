        <input type="number" id="currentRate" value="7" min="0" max="30" step="0.125" />
      </div>
      <div class="input-group">
        <label for="remainingTerm">Remaining Term (Years)</label>
        <input type="number" id="remainingTerm" value="25" min="1" max="30" step="1" />
      </div>
