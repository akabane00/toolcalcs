<script>
  function formatCurrency(n: number): string {
    return '$' + n.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
  }

  function formatPct(n: number): string {
    return n.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) + '%';
  }

  function calculate() {
    const initial = parseFloat((document.getElementById('initialInvestment') as HTMLInputElement).value) || 0;
    const final_ = parseFloat((document.getElementById('finalValue') as HTMLInputElement).value) || 0;
    const years = parseFloat((document.getElementById('investmentPeriod') as HTMLInputElement).value) || 0;

    const netProfit = final_ - initial;
    const totalRoi = initial > 0 ? (netProfit / initial) * 100 : 0;
    const investmentMultiple = initial > 0 ? final_ / initial : 0;

    document.getElementById('totalRoi')!.textContent = formatPct(totalRoi);
    document.getElementById('netProfit')!.textContent = formatCurrency(netProfit);
    document.getElementById('investmentMultiple')!.textContent = investmentMultiple.toFixed(2) + 'x';

    if (years > 0 && initial > 0 && final_ > 0) {
      const annualized = (Math.pow(final_ / initial, 1 / years) - 1) * 100;
      const totalMonths = years * 12;
      const totalDays = years * 365;
      const monthlyReturn = (Math.pow(final_ / initial, 1 / totalMonths) - 1) * 100;
      const dailyReturn = (Math.pow(final_ / initial, 1 / totalDays) - 1) * 100;

      document.getElementById('annualizedRoi')!.textContent = formatPct(annualized);
      document.getElementById('monthlyReturn')!.textContent = formatPct(monthlyReturn);
      document.getElementById('dailyReturn')!.textContent = formatPct(dailyReturn);
    } else {
      document.getElementById('annualizedRoi')!.textContent = '--';
      document.getElementById('monthlyReturn')!.textContent = '--';
      document.getElementById('dailyReturn')!.textContent = '--';
    }
  }

  document.getElementById('calculateBtn')?.addEventListener('click', calculate);
  calculate();
</script>
