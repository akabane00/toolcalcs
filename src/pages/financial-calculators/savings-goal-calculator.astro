<script>
  function formatCurrency(n: number): string {
    return '$' + n.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 });
  }

  function calculate() {
    const goalAmount = parseFloat((document.getElementById('goalAmount') as HTMLInputElement).value) || 0;
    const currentSavings = parseFloat((document.getElementById('currentSavings') as HTMLInputElement).value) || 0;
    const timeMonths = parseInt((document.getElementById('timeMonths') as HTMLInputElement).value) || 1;
    const annualRate = (parseFloat((document.getElementById('annualRate') as HTMLInputElement).value) || 0) / 100;

    const remaining = goalAmount - currentSavings;
    let monthlySavings = 0;
    let totalContributions = 0;
    let interestEarned = 0;

    if (remaining <= 0) {
      // Goal already met
      monthlySavings = 0;
      totalContributions = currentSavings;
      interestEarned = 0;
    } else if (annualRate === 0) {
      // No interest: simple division
      monthlySavings = remaining / timeMonths;
      totalContributions = currentSavings + monthlySavings * timeMonths;
      interestEarned = 0;
    } else {
      // Future value of annuity formula
      // FV = PV * (1 + r)^n + PMT * (((1 + r)^n - 1) / r)
      // Solve for PMT:
      // PMT = (FV - PV * (1 + r)^n) / (((1 + r)^n - 1) / r)
      const r = annualRate / 12;
      const n = timeMonths;
      const compoundFactor = Math.pow(1 + r, n);
      const futureValueOfCurrent = currentSavings * compoundFactor;
      const annuityFactor = (compoundFactor - 1) / r;

      monthlySavings = (goalAmount - futureValueOfCurrent) / annuityFactor;

      // If current savings alone exceed the goal with interest, no monthly savings needed
      if (monthlySavings < 0) {
        monthlySavings = 0;
      }

      totalContributions = currentSavings + monthlySavings * timeMonths;
      interestEarned = goalAmount - totalContributions;

      // Handle floating-point edge cases
      if (interestEarned < 0) {
        interestEarned = 0;
      }
    }

    document.getElementById('monthlySavings')!.textContent = formatCurrency(monthlySavings);
    document.getElementById('totalContributions')!.textContent = formatCurrency(totalContributions);
    document.getElementById('interestEarned')!.textContent = formatCurrency(interestEarned);
    document.getElementById('goalDisplay')!.textContent = formatCurrency(goalAmount);
  }

  document.getElementById('calculateBtn')?.addEventListener('click', calculate);
  // Auto-calculate on load
  calculate();
</script>
