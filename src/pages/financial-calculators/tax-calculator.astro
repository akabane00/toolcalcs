      { min: 96950, max: 206700, rate: 0.22 },
      { min: 206700, max: 394600, rate: 0.24 },
      { min: 394600, max: 501050, rate: 0.32 },
      { min: 501050, max: 751600, rate: 0.35 },
      { min: 751600, max: Infinity, rate: 0.37 },
    ],
    mfs: [
      { min: 0, max: 11925, rate: 0.10 },
      { min: 11925, max: 48475, rate: 0.12 },
      { min: 48475, max: 103350, rate: 0.22 },
      { min: 103350, max: 197300, rate: 0.24 },
      { min: 197300, max: 250525, rate: 0.32 },
      { min: 250525, max: 626350, rate: 0.35 },
      { min: 626350, max: Infinity, rate: 0.37 },
    ],
    hoh: [
      { min: 0, max: 17000, rate: 0.10 },
      { min: 17000, max: 64850, rate: 0.12 },
      { min: 64850, max: 103350, rate: 0.22 },
      { min: 103350, max: 197300, rate: 0.24 },
      { min: 197300, max: 250500, rate: 0.32 },
      { min: 250500, max: 626350, rate: 0.35 },
      { min: 626350, max: Infinity, rate: 0.37 },
    ],
  };

  const standardDeductions: Record<string, number> = {
    single: 15000,
    mfj: 30000,
    mfs: 15000,
    hoh: 22500,
  };

  function calculateFederalTax(taxableIncome: number, brackets: { min: number; max: number; rate: number }[]): number {
    let tax = 0;
    for (const bracket of brackets) {
      if (taxableIncome <= bracket.min) break;
      const taxableInBracket = Math.min(taxableIncome, bracket.max) - bracket.min;
      tax += taxableInBracket * bracket.rate;
    }
    return tax;
  }

  function getMarginalRate(taxableIncome: number, brackets: { min: number; max: number; rate: number }[]): number {
    let rate = 0;
    for (const bracket of brackets) {
      if (taxableIncome > bracket.min) {
        rate = bracket.rate;
      } else {
        break;
      }
    }
    return rate;
  }

  function calculate(): void {
    const grossIncome = parseFloat((document.getElementById('grossIncome') as HTMLInputElement).value) || 0;
    const filingStatus = (document.getElementById('filingStatus') as HTMLSelectElement).value;
    const deductionType = (document.getElementById('deductionType') as HTMLSelectElement).value;
    const itemizedAmount = parseFloat((document.getElementById('itemizedAmount') as HTMLInputElement).value) || 0;

    // Determine deduction amount
    const stdDeduction = standardDeductions[filingStatus] || 15000;
    const deduction = deductionType === 'itemized' ? itemizedAmount : stdDeduction;

    // Calculate taxable income
    const taxableIncome = Math.max(0, grossIncome - deduction);

    // Get brackets for this filing status
    const brackets = federalBrackets[filingStatus] || federalBrackets.single;

    // Calculate federal tax
    const federalTax = calculateFederalTax(taxableIncome, brackets);

    // Calculate rates
    const effectiveRate = grossIncome > 0 ? (federalTax / grossIncome) * 100 : 0;
    const marginalRate = taxableIncome > 0 ? getMarginalRate(taxableIncome, brackets) * 100 : 0;

    // After-tax income
    const afterTaxIncome = grossIncome - federalTax;

    // Update results
    document.getElementById('federalTax')!.textContent = formatCurrency(federalTax);
    document.getElementById('effectiveRate')!.textContent = effectiveRate.toFixed(1) + '%';
    document.getElementById('marginalRate')!.textContent = marginalRate.toFixed(0) + '%';
    document.getElementById('afterTaxIncome')!.textContent = formatCurrency(afterTaxIncome);
    document.getElementById('deductionUsed')!.textContent = formatCurrency(deduction);
    document.getElementById('taxableIncome')!.textContent = formatCurrency(taxableIncome);
  }

  // Toggle itemized deduction input visibility
  document.getElementById('deductionType')?.addEventListener('change', () => {
    const deductionType = (document.getElementById('deductionType') as HTMLSelectElement).value;
    const itemizedGroup = document.getElementById('itemizedGroup') as HTMLElement;
    itemizedGroup.style.display = deductionType === 'itemized' ? '' : 'none';
    calculate();
  });

  // Recalculate on all input changes
  document.getElementById('calculateBtn')?.addEventListener('click', calculate);
  document.getElementById('grossIncome')?.addEventListener('input', calculate);
  document.getElementById('filingStatus')?.addEventListener('change', calculate);
  document.getElementById('itemizedAmount')?.addEventListener('input', calculate);

  // Auto-calculate on load
  calculate();
</script>
