---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { getCalculatorsByCategory } from '../../data/calculators';
import '../../styles/category.css';

const calcs = getCalculatorsByCategory('health-calculators');

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://toolcalcs.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Health Calculators"
    }
  ]
};
---

<BaseLayout
  title="Health & Fitness Calculators - BMI, TDEE & More"
  description="Free health calculators: BMI, TDEE, calorie needs, and more. Track your fitness goals with accurate, science-based tools."

  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <span>Health Calculators</span>
  </nav>

  <h1>Health & Fitness Calculators</h1>
  <p class="page-desc">Science-based tools to help you understand your body and reach your fitness goals.</p>

  <AdUnit slot="cat-top" format="horizontal" />

  <div class="calc-grid">
    {calcs.map(calc => (
      <a href={`/health-calculators/${calc.slug}/`} class="calc-card">
        <span class="calc-icon">{calc.icon}</span>
        <h2>{calc.title}</h2>
        <p>{calc.description}</p>
      </a>
    ))}
  </div>

  <AdUnit slot="cat-bottom" format="horizontal" />
</BaseLayout>

