<script>
  function addDays(date: Date, days: number): Date {
    const result = new Date(date);
    result.setDate(result.getDate() + days);
    return result;
  }

  function formatDate(date: Date): string {
    return date.toLocaleDateString('en-US', {
      weekday: 'short',
      month: 'short',
      day: 'numeric',
    });
  }

  function parseLocalDate(value: string): Date {
    const parts = value.split('-');
    return new Date(
      parseInt(parts[0]),
      parseInt(parts[1]) - 1,
      parseInt(parts[2])
    );
  }

  function calculate(): void {
    const lastPeriodInput = document.getElementById('lastPeriod') as HTMLInputElement;
    const cycleLengthInput = document.getElementById('cycleLength') as HTMLInputElement;
    const lutealPhaseInput = document.getElementById('lutealPhase') as HTMLInputElement;
    const resultsEl = document.getElementById('results') as HTMLElement;

    const lastPeriodVal = lastPeriodInput.value;
    if (!lastPeriodVal) {
      resultsEl.style.display = 'none';
      return;
    }

    const lastPeriod = parseLocalDate(lastPeriodVal);
    const cycleLength = parseInt(cycleLengthInput.value) || 28;
    const lutealPhase = parseInt(lutealPhaseInput.value) || 14;

    // Clamp values to valid ranges
    const clampedCycle = Math.min(Math.max(cycleLength, 21), 35);
    const clampedLuteal = Math.min(Math.max(lutealPhase, 10), 16);

    // Ovulation = last period + cycle length - luteal phase
    const daysToOvulation = clampedCycle - clampedLuteal;
    const ovulationDate = addDays(lastPeriod, daysToOvulation);

    // Fertile window = ovulation day -5 to +1
    const fertileStart = addDays(ovulationDate, -5);
    const fertileEnd = addDays(ovulationDate, 1);

    // Next period date = last period + cycle length
    const nextPeriod = addDays(lastPeriod, clampedCycle);

    // Next cycle ovulation = next period + (cycle length - luteal phase)
    const nextOvulation = addDays(nextPeriod, daysToOvulation);

    // Update fertile window display
    document.getElementById('fwStart')!.textContent = formatDate(fertileStart);
    document.getElementById('fwEnd')!.textContent = formatDate(fertileEnd);
    document.getElementById('fwOvulationDay')!.textContent = formatDate(ovulationDate);

    // Update result cards
    document.getElementById('ovulationDate')!.textContent = formatDate(ovulationDate);
    document.getElementById('fertileStart')!.textContent = formatDate(fertileStart);
    document.getElementById('fertileEnd')!.textContent = formatDate(fertileEnd);
    document.getElementById('nextPeriod')!.textContent = formatDate(nextPeriod);
    document.getElementById('nextOvulation')!.textContent = formatDate(nextOvulation);

    resultsEl.style.display = 'block';
  }

  document.getElementById('calculateBtn')?.addEventListener('click', calculate);

  // Also recalculate when inputs change
  document.getElementById('lastPeriod')?.addEventListener('change', calculate);
  document.getElementById('cycleLength')?.addEventListener('input', calculate);
  document.getElementById('lutealPhase')?.addEventListener('input', calculate);
</script>
