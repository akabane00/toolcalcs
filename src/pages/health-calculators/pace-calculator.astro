<style>
  .quick-distances {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin-top: 4px;
  }
  .quick-dist-btn {
    padding: 8px 16px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    background: transparent;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    color: var(--color-text);
    transition: all 0.15s;
  }
  .quick-dist-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }
  .quick-dist-btn.active {
    background: var(--color-primary);
    color: #fff;
    border-color: var(--color-primary);
  }

  .input-group.full-width { flex: 100%; }

  .result-unit { display: block; font-size: 0.75rem; color: var(--color-text-muted); }

  .projections { margin-top: 16px; }
  .projections-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 12px;
    color: var(--color-text);
  }

  @media (max-width: 640px) {
    .quick-distances { gap: 6px; }
    .quick-dist-btn { padding: 6px 12px; font-size: 0.85rem; }
  }
</style>

<script>
  const KM_PER_MILE = 1.60934;

  const raceDistancesKm: Record<string, number> = {
    '5k': 5,
    '10k': 10,
    'half': 21.0975,
    'full': 42.195,
  };

  let currentDistKm = 5;
  let isCustom = false;

  const distanceInput = document.getElementById('distance') as HTMLInputElement;
  const distanceGroup = document.getElementById('distanceGroup') as HTMLElement;
  const distanceUnit = document.getElementById('distanceUnit') as HTMLSelectElement;
  const hoursInput = document.getElementById('hours') as HTMLInputElement;
  const minutesInput = document.getElementById('minutes') as HTMLInputElement;
  const secondsInput = document.getElementById('seconds') as HTMLInputElement;

  // Quick distance buttons
  document.querySelectorAll('.quick-dist-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.quick-dist-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      const distVal = (btn as HTMLElement).dataset.dist!;
      const unitVal = (btn as HTMLElement).dataset.unitVal!;

      if (distVal === 'custom') {
        isCustom = true;
        distanceGroup.style.display = '';
        distanceInput.focus();
      } else {
        isCustom = false;
        distanceGroup.style.display = 'none';
        currentDistKm = parseFloat(distVal);
        if (unitVal === 'km') {
          distanceUnit.value = 'km';
        }
      }
    });
  });

  function getDistanceKm(): number {
    if (isCustom) {
      const val = parseFloat(distanceInput.value) || 0;
      if (distanceUnit.value === 'miles') {
        return val * KM_PER_MILE;
      }
      return val;
    }
    return currentDistKm;
  }

  function getDistanceMiles(): number {
    return getDistanceKm() / KM_PER_MILE;
  }

  function formatPace(totalSeconds: number): string {
    if (!isFinite(totalSeconds) || totalSeconds <= 0) return '--:--';
    const mins = Math.floor(totalSeconds / 60);
    const secs = Math.round(totalSeconds % 60);
    return mins + ':' + (secs < 10 ? '0' : '') + secs;
  }

  function formatTime(totalSeconds: number): string {
    if (!isFinite(totalSeconds) || totalSeconds <= 0) return '--:--:--';
    const hrs = Math.floor(totalSeconds / 3600);
    const mins = Math.floor((totalSeconds % 3600) / 60);
    const secs = Math.round(totalSeconds % 60);
    if (hrs > 0) {
      return hrs + ':' + (mins < 10 ? '0' : '') + mins + ':' + (secs < 10 ? '0' : '') + secs;
    }
    return mins + ':' + (secs < 10 ? '0' : '') + secs;
  }

  function calculate() {
    const hours = parseFloat(hoursInput.value) || 0;
    const minutes = parseFloat(minutesInput.value) || 0;
    const seconds = parseFloat(secondsInput.value) || 0;
    const totalSeconds = hours * 3600 + minutes * 60 + seconds;

    const distKm = getDistanceKm();
    const distMiles = getDistanceMiles();

    if (totalSeconds <= 0 || distKm <= 0) {
      document.getElementById('pacePerMile')!.textContent = '--:--';
      document.getElementById('pacePerKm')!.textContent = '--:--';
      document.getElementById('speedMph')!.textContent = '0';
      document.getElementById('speedKmh')!.textContent = '0';
      return;
    }

    // Pace calculations
    const pacePerMileSec = totalSeconds / distMiles;
    const pacePerKmSec = totalSeconds / distKm;

    // Speed calculations
    const totalHours = totalSeconds / 3600;
    const speedMph = distMiles / totalHours;
    const speedKmh = distKm / totalHours;

    // Display results
    document.getElementById('pacePerMile')!.textContent = formatPace(pacePerMileSec);
    document.getElementById('pacePerKm')!.textContent = formatPace(pacePerKmSec);
    document.getElementById('speedMph')!.textContent = speedMph.toFixed(2);
    document.getElementById('speedKmh')!.textContent = speedKmh.toFixed(2);

    // Finish time projections
    const proj5k = pacePerKmSec * raceDistancesKm['5k'];
    const proj10k = pacePerKmSec * raceDistancesKm['10k'];
    const projHalf = pacePerKmSec * raceDistancesKm['half'];
    const projFull = pacePerKmSec * raceDistancesKm['full'];

    document.getElementById('proj5k')!.textContent = formatTime(proj5k);
    document.getElementById('proj10k')!.textContent = formatTime(proj10k);
    document.getElementById('projHalf')!.textContent = formatTime(projHalf);
    document.getElementById('projFull')!.textContent = formatTime(projFull);
  }

  document.getElementById('calculateBtn')?.addEventListener('click', calculate);
  distanceInput.addEventListener('input', calculate);
  distanceUnit.addEventListener('change', calculate);
  hoursInput.addEventListener('input', calculate);
  minutesInput.addEventListener('input', calculate);
  secondsInput.addEventListener('input', calculate);

  calculate();
</script>
