---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { getCalculatorsByCategory } from '../../data/calculators';
import '../../styles/category.css';

const calcs = getCalculatorsByCategory('math-calculators');

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://toolcalcs.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Math Calculators"
    }
  ]
};
---

<BaseLayout
  title="Math Calculators - Percentage, Fractions & More"
  description="Free math calculators: percentages, fractions, and everyday math problems solved instantly. Simple and accurate tools."

  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <span>Math Calculators</span>
  </nav>

  <h1>Math Calculators</h1>
  <p class="page-desc">Quick and accurate tools for everyday math problems.</p>

  <AdUnit slot="cat-top" format="horizontal" />

  <div class="calc-grid">
    {calcs.map(calc => (
      <a href={`/math-calculators/${calc.slug}/`} class="calc-card">
        <span class="calc-icon">{calc.icon}</span>
        <h2>{calc.title}</h2>
        <p>{calc.description}</p>
      </a>
    ))}
  </div>

  <section class="quick-ref">
    <h2>Quick Reference Tools</h2>
    <p class="quick-ref-desc">Instant answers for common math questions:</p>
    <div class="quick-ref-grid">
      <a href="/percentage/" class="quick-ref-card"><span>%</span> Percentages</a>
      <a href="/fraction/" class="quick-ref-card"><span>¬Ω</span> Fractions</a>
      <a href="/roman-numerals/" class="quick-ref-card"><span>üèõÔ∏è</span> Roman Numerals</a>
      <a href="/number-to-words/" class="quick-ref-card"><span>üî§</span> Numbers in Words</a>
      <a href="/factors-of/" class="quick-ref-card"><span>üßÆ</span> Factors</a>
    </div>
  </section>

  <AdUnit slot="cat-bottom" format="horizontal" />
</BaseLayout>

<style>
  .quick-ref { margin-top: 40px; }
  .quick-ref h2 { font-size: 1.3rem; margin-bottom: 6px; }
  .quick-ref-desc { color: var(--color-text-muted); font-size: 0.9rem; margin-bottom: 16px; }
  .quick-ref-grid { display: flex; flex-wrap: wrap; gap: 10px; }
  .quick-ref-card {
    display: inline-flex; align-items: center; gap: 6px;
    padding: 10px 16px; border: 1px solid var(--color-border);
    border-radius: var(--radius); font-size: 0.9rem;
    color: var(--color-text); background: var(--color-surface);
    transition: border-color 0.15s, color 0.15s;
  }
  .quick-ref-card:hover { border-color: var(--color-primary); color: var(--color-primary); text-decoration: none; }
  .quick-ref-card span { font-size: 1.1rem; }
</style>

