---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { getCalculatorsByCategory } from '../../data/calculators';

const calcs = getCalculatorsByCategory('math-calculators');

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://toolcalcs.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Math Calculators"
    }
  ]
};
---

<BaseLayout
  title="Math Calculators - Percentage, Fractions & More"
  description="Free math calculators: percentages, fractions, and everyday math problems solved instantly. Simple and accurate tools."

  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <span>Math Calculators</span>
  </nav>

  <h1>Math Calculators</h1>
  <p class="page-desc">Quick and accurate tools for everyday math problems.</p>

  <AdUnit slot="cat-top" format="horizontal" />

  <div class="calc-grid">
    {calcs.map(calc => (
      <a href={`/math-calculators/${calc.slug}/`} class="calc-card">
        <span class="calc-icon">{calc.icon}</span>
        <h2>{calc.title}</h2>
        <p>{calc.description}</p>
      </a>
    ))}
  </div>

  <AdUnit slot="cat-bottom" format="horizontal" />
</BaseLayout>

<style>
  .breadcrumb { font-size: 0.85rem; color: var(--color-text-muted); margin-bottom: 16px; }
  .breadcrumb a { color: var(--color-text-muted); }
  .breadcrumb a:hover { color: var(--color-primary); }
  h1 { font-size: 1.8rem; margin-bottom: 8px; }
  .page-desc { color: var(--color-text-muted); margin-bottom: 24px; }
  .calc-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 16px;
  }
  .calc-card {
    display: block;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    padding: 20px;
    transition: box-shadow 0.15s, border-color 0.15s;
    text-decoration: none;
    color: var(--color-text);
  }
  .calc-card:hover { border-color: var(--color-primary); box-shadow: var(--shadow-md); text-decoration: none; }
  .calc-icon { font-size: 1.6rem; display: block; margin-bottom: 8px; }
  .calc-card h2 { font-size: 1.05rem; font-weight: 600; margin-bottom: 6px; }
  .calc-card p { font-size: 0.85rem; color: var(--color-text-muted); }
  @media (max-width: 640px) { .calc-grid { grid-template-columns: 1fr; } }
</style>
