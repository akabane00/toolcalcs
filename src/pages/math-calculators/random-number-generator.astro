  var generatedNumbers = [];

  function generateNumbers() {
    var min = parseInt(document.getElementById('minVal').value);
    var max = parseInt(document.getElementById('maxVal').value);
    var count = parseInt(document.getElementById('howMany').value);
    var allowDups = document.getElementById('allowDuplicates').checked;

    if (isNaN(min) || isNaN(max) || isNaN(count)) {
      alert('Please enter valid numbers for all fields.');
      return;
    }
    if (min > max) {
      alert('Minimum value must be less than or equal to maximum value.');
      return;
    }
    if (count < 1 || count > 100) {
      alert('How Many must be between 1 and 100.');
      return;
    }

    var range = max - min + 1;
    if (!allowDups && count > range) {
      alert('Cannot generate ' + count + ' unique numbers from a range of only ' + range + '. Please increase the range or reduce the count.');
      return;
    }

    generatedNumbers = [];

    if (allowDups) {
      for (var i = 0; i < count; i++) {
        generatedNumbers.push(Math.floor(Math.random() * range) + min);
      }
    } else {
      // Fisher-Yates shuffle approach for unique numbers
      if (count <= range * 0.5 || range > 10000) {
        // Set-based approach for sparse selections
        var used = {};
        while (generatedNumbers.length < count) {
          var num = Math.floor(Math.random() * range) + min;
          if (!used[num]) {
            used[num] = true;
            generatedNumbers.push(num);
          }
        }
      } else {
        // Build full array and shuffle for dense selections
        var pool = [];
        for (var j = min; j <= max; j++) {
          pool.push(j);
        }
        for (var k = pool.length - 1; k > 0; k--) {
          var idx = Math.floor(Math.random() * (k + 1));
          var tmp = pool[k];
          pool[k] = pool[idx];
          pool[idx] = tmp;
        }
        generatedNumbers = pool.slice(0, count);
      }
    }

    displayResults();
  }

  function displayResults() {
    var resultArea = document.getElementById('resultArea');
    var singleResult = document.getElementById('singleResult');
    var multiResult = document.getElementById('multiResult');

    resultArea.style.display = 'block';

    if (generatedNumbers.length === 1) {
      singleResult.style.display = 'block';
      multiResult.style.display = 'none';
      document.getElementById('singleNumber').textContent = generatedNumbers[0].toLocaleString('en-US');
    } else {
      singleResult.style.display = 'none';
      multiResult.style.display = 'block';
      var grid = document.getElementById('numberGrid');
      grid.innerHTML = '';
      for (var i = 0; i < generatedNumbers.length; i++) {
        var badge = document.createElement('span');
        badge.className = 'number-badge';
        badge.textContent = generatedNumbers[i].toLocaleString('en-US');
        grid.appendChild(badge);
      }
    }
  }

  function sortNumbers() {
    if (generatedNumbers.length === 0) return;
    generatedNumbers.sort(function(a, b) { return a - b; });
    displayResults();
  }

  function copyNumbers() {
    if (generatedNumbers.length === 0) return;
    var text = generatedNumbers.join(', ');
    if (navigator.clipboard && navigator.clipboard.writeText) {
      navigator.clipboard.writeText(text).then(function() {
        showCopyFeedback();
      });
    } else {
      // Fallback for older browsers
      var textarea = document.createElement('textarea');
      textarea.value = text;
      textarea.style.position = 'fixed';
      textarea.style.opacity = '0';
      document.body.appendChild(textarea);
      textarea.select();
      document.execCommand('copy');
      document.body.removeChild(textarea);
      showCopyFeedback();
    }
  }

  function showCopyFeedback() {
    var btn = document.getElementById('copyBtn');
    var original = btn.textContent;
    btn.textContent = 'Copied!';
    setTimeout(function() {
      btn.textContent = original;
    }, 1500);
  }

  function applyPreset(min, max, count, allowDups) {
    document.getElementById('minVal').value = min;
    document.getElementById('maxVal').value = max;
    document.getElementById('howMany').value = count;
    document.getElementById('allowDuplicates').checked = allowDups;
    generateNumbers();
  }

