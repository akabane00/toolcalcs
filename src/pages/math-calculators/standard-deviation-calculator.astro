<script>
  function parseNumbers(input: string): number[] {
    return input
      .split(/[\s,]+/)
      .map((s) => s.trim())
      .filter((s) => s !== '')
      .map(Number)
      .filter((n) => !isNaN(n));
  }

  function calculateMedian(sorted: number[]): number {
    const mid = Math.floor(sorted.length / 2);
    if (sorted.length % 2 === 0) {
      return (sorted[mid - 1] + sorted[mid]) / 2;
    }
    return sorted[mid];
  }

  function calculateMode(nums: number[]): string {
    const freq: Record<number, number> = {};
    let maxFreq = 0;
    for (const n of nums) {
      freq[n] = (freq[n] || 0) + 1;
      if (freq[n] > maxFreq) maxFreq = freq[n];
    }
    if (maxFreq === 1) return 'None';
    const modes = Object.keys(freq)
      .filter((k) => freq[Number(k)] === maxFreq)
      .map(Number);
    if (modes.length === Object.keys(freq).length) return 'None';
    return modes.map((m) => fmt(m)).join(', ');
  }

  function fmt(n: number): string {
    return n.toLocaleString('en-US', { maximumFractionDigits: 6 });
  }

  function calculate(): void {
    const textarea = document.getElementById('dataInput') as HTMLTextAreaElement;
    const cards = document.getElementById('resultCards') as HTMLDivElement;
    const nums = parseNumbers(textarea.value);

    if (nums.length === 0) {
      cards.style.display = 'none';
      return;
    }

    const isPopulation = (document.querySelector('input[name="calcType"]:checked') as HTMLInputElement).value === 'population';

    const n = nums.length;
    const sum = nums.reduce((a, b) => a + b, 0);
    const mean = sum / n;

    const squaredDiffs = nums.map((x) => (x - mean) ** 2);
    const sumSquaredDiffs = squaredDiffs.reduce((a, b) => a + b, 0);
    const variance = isPopulation ? sumSquaredDiffs / n : sumSquaredDiffs / (n - 1);
    const stdDev = Math.sqrt(variance);

    const sorted = [...nums].sort((a, b) => a - b);
    const min = sorted[0];
    const max = sorted[sorted.length - 1];
    const range = max - min;
    const median = calculateMedian(sorted);
    const mode = calculateMode(nums);

    (document.getElementById('resStdDev') as HTMLSpanElement).textContent = fmt(stdDev);
    (document.getElementById('resMean') as HTMLSpanElement).textContent = fmt(mean);
    (document.getElementById('resVariance') as HTMLSpanElement).textContent = fmt(variance);
    (document.getElementById('resCount') as HTMLSpanElement).textContent = String(n);
    (document.getElementById('resMedian') as HTMLSpanElement).textContent = fmt(median);
    (document.getElementById('resMode') as HTMLSpanElement).textContent = mode;
    (document.getElementById('resRange') as HTMLSpanElement).textContent = fmt(range);
    (document.getElementById('resMin') as HTMLSpanElement).textContent = fmt(min);
    (document.getElementById('resMax') as HTMLSpanElement).textContent = fmt(max);
    (document.getElementById('resSum') as HTMLSpanElement).textContent = fmt(sum);

    cards.style.display = 'grid';
  }

  (document.getElementById('calculateBtn') as HTMLButtonElement).addEventListener('click', calculate);

  document.querySelectorAll('input[name="calcType"]').forEach((radio) => {
    radio.addEventListener('change', calculate);
  });

  (document.getElementById('dataInput') as HTMLTextAreaElement).addEventListener('keydown', (e: KeyboardEvent) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      // Allow Shift+Enter for newlines, plain Enter calculates
      // Don't prevent default so newlines still work in textarea
    }
  });

  // Calculate on load
  calculate();
</script>
