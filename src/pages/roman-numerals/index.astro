---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { getAllRomanNumeralPages } from '../../data/roman-numerals';
import '../../styles/calculator.css';

const allPages = getAllRomanNumeralPages();
const numbersUpTo100 = allPages.filter((p) => p.number <= 100);
const years = allPages.filter((p) => p.number >= 1900);

// Group years by decade
const yearDecades = new Map<string, typeof years>();
for (const page of years) {
  const decade = `${Math.floor(page.number / 10) * 10}s`;
  if (!yearDecades.has(decade)) yearDecades.set(decade, []);
  yearDecades.get(decade)!.push(page);
}

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://toolcalcs.com/" },
    { "@type": "ListItem", "position": 2, "name": "Math Calculators", "item": "https://toolcalcs.com/math-calculators/" },
    { "@type": "ListItem", "position": 3, "name": "Roman Numerals" },
  ],
};
---

<BaseLayout
  title="Roman Numerals Chart - 1 to 100 & Years 1900-2030 | ToolCalcs"
  description={`Complete Roman numerals chart for numbers 1-100 and years 1900-2030. Browse ${allPages.length} Roman numeral conversions with step-by-step breakdowns.`}
  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <a href="/math-calculators/">Math Calculators</a> &rsaquo; <span>Roman Numerals</span>
  </nav>

  <h1>Roman Numerals Chart</h1>
  <p class="page-desc">Browse {allPages.length} Roman numeral conversions. Click any number for a detailed breakdown.</p>

  <AdUnit slot="roman-idx-top" format="horizontal" />

  <h2 class="section-heading">Numbers 1–100</h2>
  <div class="calculator-box">
    <div class="roman-grid">
      {numbersUpTo100.map((p) => (
        <a href={`/roman-numerals/${p.slug}/`} class="roman-cell">
          <span class="roman-num">{p.number}</span>
          <span class="roman-val">{p.roman}</span>
        </a>
      ))}
    </div>
  </div>

  <AdUnit slot="roman-idx-mid" format="rectangle" />

  <h2 class="section-heading">Years 1900–2030</h2>
  {[...yearDecades.entries()].map(([decade, pages]) => (
    <div class="decade-block">
      <h3 class="decade-label">{decade}</h3>
      <div class="calculator-box">
        <table class="data-table">
          <thead>
            <tr>
              <th>Year</th>
              <th>Roman Numeral</th>
            </tr>
          </thead>
          <tbody>
            {pages.map((p) => (
              <tr>
                <td><a href={`/roman-numerals/${p.slug}/`}>{p.number}</a></td>
                <td>{p.roman}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  ))}

  <AdUnit slot="roman-idx-bottom" format="horizontal" />
</BaseLayout>

<style>
  .section-heading {
    font-size: 1.2rem;
    margin: 32px 0 12px;
  }
  .section-heading:first-of-type {
    margin-top: 0;
  }

  .roman-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 6px;
  }
  .roman-cell {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
    padding: 10px 6px;
    background: var(--color-bg);
    border-radius: var(--radius);
    text-decoration: none;
    color: var(--color-text);
    transition: background 0.15s;
  }
  .roman-cell:hover {
    background: #eff6ff;
  }
  .roman-num {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--color-primary);
  }
  .roman-val {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    font-family: 'Courier New', Consolas, monospace;
  }

  .decade-block {
    margin-bottom: 24px;
  }
  .decade-label {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-muted);
    margin-bottom: 8px;
  }

  @media (max-width: 640px) {
    .roman-grid {
      grid-template-columns: repeat(auto-fill, minmax(64px, 1fr));
    }
  }
</style>
