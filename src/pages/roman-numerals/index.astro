---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { getAllRomanNumeralPages } from '../../data/roman-numerals';
import '../../styles/category.css';

const allPages = getAllRomanNumeralPages();
const numberPages = allPages.filter(p => p.number <= 100);
const yearPages = allPages.filter(p => p.number > 100);

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://toolcalcs.com/" },
    { "@type": "ListItem", "position": 2, "name": "Math Calculators", "item": "https://toolcalcs.com/math-calculators/" },
    { "@type": "ListItem", "position": 3, "name": "Roman Numerals" },
  ],
};
---

<BaseLayout
  title="Roman Numerals Chart & Converter (1-3999) | ToolCalcs"
  description="Convert numbers to Roman numerals. Browse our complete chart of Roman numerals from 1 to 100, plus years from 1900 to 2030."
  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo;
    <a href="/math-calculators/">Math Calculators</a> &rsaquo;
    <span>Roman Numerals</span>
  </nav>

  <h1>Roman Numerals</h1>
  <p class="page-desc">Convert numbers to Roman numerals. Browse our complete chart from 1 to 100 and years from 1900 to 2030.</p>

  <AdUnit slot="roman-idx-top" format="horizontal" />

  <!-- Numbers 1-100 -->
  <h2 class="section-title">Numbers 1-100</h2>
  <div class="category-grid">
    {numberPages.map((p) => (
      <a href={`/roman-numerals/${p.slug}/`} class="category-card">
        <span class="card-number">{p.number}</span>
        <span class="card-roman">{p.roman}</span>
      </a>
    ))}
  </div>

  <AdUnit slot="roman-idx-mid" format="rectangle" />

  <!-- Years 1900-2030 -->
  <h2 class="section-title">Years 1900-2030</h2>
  <div class="category-grid">
    {yearPages.map((p) => (
      <a href={`/roman-numerals/${p.slug}/`} class="category-card">
        <span class="card-number">{p.number}</span>
        <span class="card-roman">{p.roman}</span>
      </a>
    ))}
  </div>

  <AdUnit slot="roman-idx-bottom" format="horizontal" />
</BaseLayout>

<style>
  .section-title {
    font-size: 1.3rem;
    margin: 32px 0 16px;
  }
  .section-title:first-of-type {
    margin-top: 0;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 8px;
    margin-bottom: 32px;
  }

  .category-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    padding: 12px 8px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    text-decoration: none;
    color: var(--color-text);
    transition: border-color 0.15s, box-shadow 0.15s;
  }
  .category-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
    text-decoration: none;
  }

  .card-number {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-primary);
  }
  .card-roman {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    font-family: 'Courier New', Consolas, monospace;
    letter-spacing: 0.02em;
  }

  @media (max-width: 640px) {
    .category-grid {
      grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    }
  }
</style>
