---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { tools } from '../../data/tools';
import '../../styles/category.css';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://toolcalcs.com/" },
    { "@type": "ListItem", "position": 2, "name": "Web Tools" }
  ]
};
---

<BaseLayout
  title="Free Online Web Tools - JSON, Hash, QR Code, Regex & More | ToolCalcs"
  description="Free web tools: JSON formatter, password generator, Base64 encoder, hash generator, regex tester, QR code generator, image compressor, and more. All in your browser."
  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <span>Web Tools</span>
  </nav>

  <h1>Web Tools</h1>
  <p class="page-desc">Free online utilities for developers and designers. Format, convert, generate, and encode â€” all in your browser.</p>

  <AdUnit slot="cat-top" format="horizontal" />

  <div class="calc-grid">
    {tools.map(tool => (
      <a href={`/tools/${tool.slug}/`} class="calc-card">
        <span class="calc-icon">{tool.icon}</span>
        <h2>{tool.title}</h2>
        <p>{tool.description}</p>
      </a>
    ))}
  </div>

  <AdUnit slot="cat-bottom" format="horizontal" />

  <section class="cross-section">
    <h2>Explore More on ToolCalcs</h2>
    <div class="cross-links">
      <a href="/test/">Tests & Games</a>
      <a href="/financial-calculators/">Financial Calculators</a>
      <a href="/health-calculators/">Health Calculators</a>
      <a href="/math-calculators/">Math Calculators</a>
      <a href="/worksheets/">Math Worksheets</a>
    </div>
  </section>
</BaseLayout>

<style>
  .cross-section {
    margin-top: 40px;
    padding-top: 24px;
    border-top: 1px solid var(--color-border);
  }
  .cross-section h2 {
    font-size: 1.1rem;
    margin-bottom: 12px;
  }
  .cross-links {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  .cross-links a {
    padding: 6px 14px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    font-size: 0.85rem;
    color: var(--color-text);
    transition: border-color 0.15s;
  }
  .cross-links a:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    text-decoration: none;
  }
</style>
