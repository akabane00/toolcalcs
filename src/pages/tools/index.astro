---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { tools } from '../../data/tools';
import '../../styles/category.css';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://toolcalcs.com/" },
    { "@type": "ListItem", "position": 2, "name": "Web Tools" }
  ]
};
---

<BaseLayout
  title="Free Online Web Tools - JSON, Password, Base64 & More | ToolCalcs"
  description="Free web tools for developers and designers: JSON formatter, password generator, text case converter, Base64 encoder, color converter, and lorem ipsum generator."
  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <span>Web Tools</span>
  </nav>

  <h1>Web Tools</h1>
  <p class="page-desc">Free online utilities for developers and designers. Format, convert, generate, and encode â€” all in your browser.</p>

  <AdUnit slot="cat-top" format="horizontal" />

  <div class="calc-grid">
    {tools.map(tool => (
      <a href={`/tools/${tool.slug}/`} class="calc-card">
        <span class="calc-icon">{tool.icon}</span>
        <h2>{tool.title}</h2>
        <p>{tool.description}</p>
      </a>
    ))}
  </div>

  <AdUnit slot="cat-bottom" format="horizontal" />
</BaseLayout>
