---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdUnit from '../../components/AdUnit.astro';
import { worksheets } from '../../data/worksheets';
import '../../styles/category.css';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://toolcalcs.com/" },
    { "@type": "ListItem", "position": 2, "name": "Worksheets" }
  ]
};
---

<BaseLayout
  title="Free Printable Math Worksheets - Addition, Subtraction & More | ToolCalcs"
  description="Free printable math worksheets for K-5: addition, subtraction, multiplication, division, number tracing, skip counting, telling time, and counting money."
  structuredData={structuredData}
>
  <nav class="breadcrumb">
    <a href="/">Home</a> &rsaquo; <span>Worksheets</span>
  </nav>

  <h1>Printable Math Worksheets</h1>
  <p class="page-desc">Free, unlimited practice worksheets for Pre-K through 5th grade. Generate new problems every time, print, and practice.</p>

  <AdUnit slot="cat-top" format="horizontal" />

  <div class="calc-grid">
    {worksheets.map(ws => (
      <a href={`/worksheets/${ws.slug}/`} class="calc-card">
        <span class="calc-icon">{ws.icon}</span>
        <h2>{ws.title}</h2>
        <p>{ws.description}</p>
        <span class="grade-badge">Grades {ws.gradeRange}</span>
      </a>
    ))}
  </div>

  <AdUnit slot="cat-bottom" format="horizontal" />
</BaseLayout>

<style>
  .grade-badge {
    display: inline-block;
    margin-top: 8px;
    padding: 2px 10px;
    font-size: 0.75rem;
    font-weight: 600;
    background: #eff6ff;
    color: var(--color-primary);
    border-radius: 12px;
  }
</style>
