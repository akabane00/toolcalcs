<script is:inline>
  // --- SVG Clock Rendering ---
  var SVG_NS = 'http://www.w3.org/2000/svg';

  function createSvgEl(tag, attrs) {
    var el = document.createElementNS(SVG_NS, tag);
    for (var key in attrs) {
      el.setAttribute(key, attrs[key]);
    }
    return el;
  }

  function createClock(hour, minute) {
    var svg = document.createElementNS(SVG_NS, 'svg');
    svg.setAttribute('viewBox', '0 0 100 100');
    svg.setAttribute('class', 'clock-face');
    svg.setAttribute('role', 'img');
    svg.setAttribute('aria-label', 'Analog clock showing ' + formatTime(hour, minute));

    var cx = 50;
    var cy = 50;
    var r = 45;

    // Outer circle (clock border)
    svg.appendChild(createSvgEl('circle', {
      cx: cx, cy: cy, r: r,
      fill: '#ffffff',
      stroke: '#1e293b',
      'stroke-width': '2.5'
    }));

    // Inner circle (subtle ring)
    svg.appendChild(createSvgEl('circle', {
      cx: cx, cy: cy, r: r - 2,
      fill: 'none',
      stroke: '#e2e8f0',
      'stroke-width': '0.5'
    }));

    // Minute tick marks (60 small ticks)
    for (var i = 0; i < 60; i++) {
      var angle = (i * 6 - 90) * Math.PI / 180;
      var isHourMark = i % 5 === 0;
      var outerR = r - 3;
      var innerR = isHourMark ? r - 10 : r - 6;
      var strokeW = isHourMark ? '1.8' : '0.6';
      var color = isHourMark ? '#1e293b' : '#94a3b8';

      svg.appendChild(createSvgEl('line', {
        x1: cx + innerR * Math.cos(angle),
        y1: cy + innerR * Math.sin(angle),
        x2: cx + outerR * Math.cos(angle),
        y2: cy + outerR * Math.sin(angle),
        stroke: color,
        'stroke-width': strokeW,
        'stroke-linecap': 'round'
      }));
    }

    // Hour numbers
    for (var h = 1; h <= 12; h++) {
      var numAngle = (h * 30 - 90) * Math.PI / 180;
      var numR = r - 16;
      var text = createSvgEl('text', {
        x: cx + numR * Math.cos(numAngle),
        y: cy + numR * Math.sin(numAngle),
        'text-anchor': 'middle',
        'dominant-baseline': 'central',
        'font-size': '10',
        'font-weight': '600',
        'font-family': 'Arial, Helvetica, sans-serif',
        fill: '#1e293b'
      });
      text.textContent = h;
      svg.appendChild(text);
    }

    // Hour hand (short, thick)
    var hourAngle = ((hour % 12) * 30 + minute * 0.5 - 90) * Math.PI / 180;
    var hourLen = 24;
    var hourTail = 6;
    svg.appendChild(createSvgEl('line', {
      x1: cx - hourTail * Math.cos(hourAngle),
      y1: cy - hourTail * Math.sin(hourAngle),
      x2: cx + hourLen * Math.cos(hourAngle),
      y2: cy + hourLen * Math.sin(hourAngle),
      stroke: '#1e293b',
      'stroke-width': '3.5',
      'stroke-linecap': 'round'
    }));

    // Minute hand (long, thin)
    var minuteAngle = (minute * 6 - 90) * Math.PI / 180;
    var minuteLen = 34;
    var minuteTail = 7;
    svg.appendChild(createSvgEl('line', {
      x1: cx - minuteTail * Math.cos(minuteAngle),
      y1: cy - minuteTail * Math.sin(minuteAngle),
      x2: cx + minuteLen * Math.cos(minuteAngle),
      y2: cy + minuteLen * Math.sin(minuteAngle),
      stroke: '#334155',
      'stroke-width': '2',
      'stroke-linecap': 'round'
    }));

    // Center dot (layered for depth)
    svg.appendChild(createSvgEl('circle', {
      cx: cx, cy: cy, r: '4',
      fill: '#1e293b'
    }));
    svg.appendChild(createSvgEl('circle', {
      cx: cx, cy: cy, r: '2',
      fill: '#475569'
    }));

    return svg;
  }

  // --- Time Formatting ---
  function formatTime(hour, minute) {
    var h = hour.toString();
    var m = minute < 10 ? '0' + minute : minute.toString();
    return h + ':' + m;
  }

  // --- Time Generation ---
  function generateTime(precision) {
    var hour = Math.floor(Math.random() * 12) + 1;
    var minute = 0;

    switch (precision) {
      case 'hour':
        minute = 0;
        break;
      case 'half':
        minute = Math.random() < 0.5 ? 0 : 30;
        break;
      case '5min':
        minute = Math.floor(Math.random() * 12) * 5;
        break;
      case '1min':
        minute = Math.floor(Math.random() * 60);
        break;
    }

    return { hour: hour, minute: minute };
  }

  // --- Worksheet Generation ---
  function generateWorksheet() {
    var numClocks = parseInt(document.getElementById('numClocks').value) || 12;
    numClocks = Math.max(4, Math.min(20, numClocks));
    var precision = document.getElementById('precision').value;

    var problemGrid = document.getElementById('problemGrid');
    var answerGrid = document.getElementById('answerGrid');
    problemGrid.innerHTML = '';
    answerGrid.innerHTML = '';

    var problems = [];

    for (var i = 0; i < numClocks; i++) {
      var time = generateTime(precision);
      problems.push(time);

      // Build problem element
      var problemDiv = document.createElement('div');
      problemDiv.className = 'problem clock-problem';

      var numberDiv = document.createElement('div');
      numberDiv.className = 'problem-number';
      numberDiv.textContent = (i + 1) + ')';

      var clockDiv = document.createElement('div');
      clockDiv.className = 'clock-container';
      clockDiv.appendChild(createClock(time.hour, time.minute));

      var answerDiv = document.createElement('div');
      answerDiv.className = 'problem-answer';
      answerDiv.setAttribute('data-answer', formatTime(time.hour, time.minute));
      answerDiv.textContent = '___:___';

      problemDiv.appendChild(numberDiv);
      problemDiv.appendChild(clockDiv);
      problemDiv.appendChild(answerDiv);
      problemGrid.appendChild(problemDiv);

      // Build answer key entry
      var answerItem = document.createElement('div');
      answerItem.className = 'answer-item';
      answerItem.innerHTML = '<span class="q">' + (i + 1) + ')</span> <span class="a">' + formatTime(time.hour, time.minute) + '</span>';
      answerGrid.appendChild(answerItem);
    }

    // Update answer visibility
    updateAnswerDisplay();
  }

  // --- Answer Toggle ---
  function updateAnswerDisplay() {
    var showAnswers = document.getElementById('showAnswers').checked;
    var answerKey = document.getElementById('answerKey');
    var problemAnswers = document.querySelectorAll('.problem-answer');

    if (showAnswers) {
      answerKey.classList.remove('hidden');
      for (var i = 0; i < problemAnswers.length; i++) {
        problemAnswers[i].textContent = problemAnswers[i].getAttribute('data-answer');
        problemAnswers[i].classList.add('revealed');
      }
    } else {
      answerKey.classList.add('hidden');
      for (var j = 0; j < problemAnswers.length; j++) {
        problemAnswers[j].textContent = '___:___';
        problemAnswers[j].classList.remove('revealed');
      }
    }
  }

  // --- Event Listeners ---
  document.getElementById('generateBtn').addEventListener('click', generateWorksheet);

  document.getElementById('printBtn').addEventListener('click', function () {
    window.print();
  });

  document.getElementById('showAnswers').addEventListener('change', updateAnswerDisplay);

  // --- Generate on Load ---
  generateWorksheet();
</script>
